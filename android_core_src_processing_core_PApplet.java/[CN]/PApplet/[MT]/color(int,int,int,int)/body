{
  if (g == null) {
    if (a > 255) {
      a=255;
    }
 else     if (a < 0) {
      a=0;
    }
    if (x > 255) {
      x=255;
    }
 else     if (x < 0) {
      x=0;
    }
    if (y > 255) {
      y=255;
    }
 else     if (y < 0) {
      y=0;
    }
    if (z > 255) {
      z=255;
    }
 else     if (z < 0) {
      z=0;
    }
    return (a << 24) | (x << 16) | (y << 8)| z;
  }
  return g.color(x,y,z,a);
}
