{
  if (g == null) {
    if (alpha > 255) {
      alpha=255;
    }
 else     if (alpha < 0) {
      alpha=0;
    }
    if (gray > 255) {
      return (alpha << 24) | (gray & 0xFFFFFF);
    }
 else {
      return (alpha << 24) | (gray << 16) | (gray << 8)| gray;
    }
  }
  return g.color(gray,alpha);
}
