{
  key=(char)event.getUnicodeChar();
  if (key == 0) {
    key=CODED;
  }
 else {
  }
  keyCode=event.getKeyCode();
  int action=event.getAction();
  if (action == KeyEvent.ACTION_DOWN) {
    keyPressed=true;
    keyPressed();
  }
 else   if (action == KeyEvent.ACTION_UP) {
    keyPressed=false;
    keyReleased();
  }
  if (action == KeyEvent.ACTION_DOWN) {
    if (key == KeyEvent.KEYCODE_BACK) {
      exit();
    }
  }
}
