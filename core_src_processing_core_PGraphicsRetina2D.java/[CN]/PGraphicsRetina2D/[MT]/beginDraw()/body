{
  GraphicsConfiguration gc=parent.getGraphicsConfiguration();
  if (image == null) {
    retina.width=width * 2;
    retina.height=height * 2;
    image=gc.createCompatibleImage(retina.width,retina.height);
  }
  g2=(Graphics2D)image.getGraphics();
  checkSettings();
  resetMatrix();
  g2.scale(2,2);
  vertexCount=0;
}
