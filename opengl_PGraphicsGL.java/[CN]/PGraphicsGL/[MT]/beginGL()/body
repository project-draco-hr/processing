{
  gl.glPushMatrix();
  if (ctm == null)   ctm=new float[16];
  ctm[0]=modelview.m00;
  ctm[1]=modelview.m10;
  ctm[2]=modelview.m20;
  ctm[3]=modelview.m30;
  ctm[4]=modelview.m01;
  ctm[5]=modelview.m11;
  ctm[6]=modelview.m21;
  ctm[7]=modelview.m31;
  ctm[8]=modelview.m02;
  ctm[9]=modelview.m12;
  ctm[10]=modelview.m22;
  ctm[11]=modelview.m32;
  ctm[12]=modelview.m03;
  ctm[13]=modelview.m13;
  ctm[14]=modelview.m23;
  ctm[15]=modelview.m33;
  gl.glMultMatrixf(ctm,0);
  return gl;
}
