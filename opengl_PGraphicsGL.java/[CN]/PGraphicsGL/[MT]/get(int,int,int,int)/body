{
  if (imageMode == CORNERS) {
    w=(w - x);
    h=(h - x);
  }
  if (x < 0) {
    w+=x;
    x=0;
  }
  if (y < 0) {
    h+=y;
    y=0;
  }
  if (x + w > width)   w=width - x;
  if (y + h > height)   h=height - y;
  PImage newbie=new PImage(w,h);
  gl.glReadPixels(x,y,w,h,GL.GL_RGBA,GL.GL_UNSIGNED_BYTE,newbie.pixels);
  nativeToJavaARGB(newbie);
  return newbie;
}
