{
  JMenuItem runItem=Toolkit.newJMenuItem(DebugToolbar.getTitle(DebugToolbar.RUN,false),'R');
  runItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      handleRun();
    }
  }
);
  JMenuItem presentItem=Toolkit.newJMenuItemShift(DebugToolbar.getTitle(DebugToolbar.RUN,true),'R');
  presentItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      handlePresent();
    }
  }
);
  JMenuItem stopItem=new JMenuItem(DebugToolbar.getTitle(DebugToolbar.STOP,false));
  stopItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      handleStop();
    }
  }
);
  JMenuItem enableTweak=Toolkit.newJMenuItemShift(Language.text("menu.sketch.tweak"),'T');
  enableTweak.setSelected(JavaMode.enableTweak);
  enableTweak.addActionListener(new ActionListener(){
    @Override public void actionPerformed(    ActionEvent e){
      JavaMode.enableTweak=true;
      handleRun();
    }
  }
);
  return buildSketchMenu(new JMenuItem[]{runItem,presentItem,enableTweak,stopItem});
}
