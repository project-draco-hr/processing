{
  if (textFont == null) {
    defaultFontOrDeath("textAscent",size);
  }
  Font font=textFont.getFont();
  if (font != null && (textFont.isStream() || hints[ENABLE_NATIVE_FONTS])) {
    Font dfont=font.deriveFont(size);
    g2.setFont(dfont);
    textFont.setFont(dfont);
  }
  super.textSize(size);
}
