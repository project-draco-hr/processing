{
  if ((sw != dw) || (sh != dh)) {
    copy(this,sx,sy,sw,sh,dx,dy,dw,dh);
  }
 else {
    if (imageMode == CORNERS) {
      sw-=sx;
      sh-=sy;
    }
 else     if (imageMode == CENTER) {
      sx-=sw / 2;
      sy-=sh / 2;
    }
    dx=dx - sx;
    dy=dy - sy;
    g2.copyArea(sx,sy,sw,sh,dx,dy);
  }
}
