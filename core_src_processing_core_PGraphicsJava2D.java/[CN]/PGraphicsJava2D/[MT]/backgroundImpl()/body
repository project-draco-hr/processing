{
  if (backgroundAlpha) {
    clearPixels(backgroundColor);
  }
 else {
    Color bgColor=new Color(backgroundColor);
    Composite oldComposite=g2.getComposite();
    g2.setComposite(defaultComposite);
    pushMatrix();
    resetMatrix();
    g2.setColor(bgColor);
    g2.fillRect(0,0,width,height);
    popMatrix();
    g2.setComposite(oldComposite);
  }
}
