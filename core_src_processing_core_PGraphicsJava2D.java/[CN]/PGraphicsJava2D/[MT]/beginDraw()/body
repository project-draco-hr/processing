{
  if (image == null || ((BufferedImage)image).getWidth() != width || ((BufferedImage)image).getHeight() != height) {
    image=new BufferedImage(width,height,BufferedImage.TYPE_INT_ARGB);
  }
  g2=(Graphics2D)image.getGraphics();
  smooth(quality);
  checkSettings();
  resetMatrix();
  vertexCount=0;
}
