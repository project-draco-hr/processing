{
  size(200,200);
  background(0);
  smooth();
  fade=255.0f / (width / 2.0f / shift);
  spin=360.0f / (width / 2.0f / shift);
  p[0]=new Point(-width / 2,height / 2);
  p[1]=new Point(width / 2,height / 2);
  p[2]=new Point(0,-height / 2);
  noStroke();
  translate(width / 2,height / 2);
  triBlur();
}
