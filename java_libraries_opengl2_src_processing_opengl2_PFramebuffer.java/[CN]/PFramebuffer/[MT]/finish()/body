{
  if (noDepth) {
    if (ogl.hintEnabled(DISABLE_DEPTH_TEST)) {
      getGl().glDisable(GL.GL_DEPTH_TEST);
    }
 else {
      getGl().glEnable(GL.GL_DEPTH_TEST);
    }
  }
  if (!screenFb && !fboMode) {
    copyToColorBuffers();
    restoreBackup();
    if (!noDepth) {
      getGl().glClearColor(0,0,0,0);
      getGl().glClear(GL.GL_DEPTH_BUFFER_BIT);
    }
  }
}
