{
  byte boofer[]=new byte[1024];
  while (Thread.currentThread() == thread) {
    try {
      int count=input.read(boofer,0,boofer.length);
      if (count == -1) {
        thread=null;
      }
 else {
        System.out.print(new String(boofer,0,count));
      }
    }
 catch (    IOException e) {
      thread=null;
    }
    thread=null;
  }
}
