{
  boolean changed=false;
  int oldFirstLine=this.firstLine;
  if (horizontalOffset != this.horizontalOffset) {
    this.horizontalOffset=horizontalOffset;
    changed=true;
  }
  if (firstLine != this.firstLine) {
    this.firstLine=firstLine;
    changed=true;
  }
  if (changed) {
    updateScrollBars();
    painter.repaint();
  }
  return changed;
}
