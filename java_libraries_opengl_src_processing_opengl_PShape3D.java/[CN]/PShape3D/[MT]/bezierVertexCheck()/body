{
  if (kind != POLYGON) {
    throw new RuntimeException("createGeometry() or createGeometry(POLYGON) " + "must be used before addBezierVertex() or addQuadraticVertex()");
  }
  if (in.vertexCount == 0) {
    throw new RuntimeException("addVertex() must be used at least once" + "before addBezierVertex() or addQuadraticVertex()");
  }
}
