{
  if (glVertex != 0) {
    pgMain.deleteGLSLVertShaderObject(glVertex,context);
    glVertex=0;
  }
  if (glFragment != 0) {
    pgMain.deleteGLSLFragShaderObject(glFragment,context);
    glFragment=0;
  }
  if (glProgram != 0) {
    pgMain.deleteGLSLProgramObject(glProgram,context);
    glProgram=0;
  }
}
