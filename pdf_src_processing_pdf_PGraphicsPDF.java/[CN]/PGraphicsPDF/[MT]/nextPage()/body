{
  PStyle savedStyle=getStyle();
  g2.dispose();
  try {
    document.newPage();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  if (textMode == SHAPE) {
    g2=content.createGraphicsShapes(width,height);
  }
 else   if (textMode == MODEL) {
    g2=content.createGraphics(width,height,mapper);
  }
  style(savedStyle);
}
