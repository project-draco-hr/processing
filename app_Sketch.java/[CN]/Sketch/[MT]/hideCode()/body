{
  ensureExistence();
  if (isReadOnly()) {
    Base.showMessage("Sketch is Read-Only","Some files are marked \"read-only\", so you'll\n" + "need to re-save the sketch in another location,\n" + "and try again.");
    return;
  }
  if (current == code[0]) {
    Base.showMessage("Can't do that","You cannot hide the main " + ".pde file from a sketch\n");
    return;
  }
  File newFile=new File(current.file.getAbsolutePath() + ".x");
  if (!current.file.renameTo(newFile)) {
    Base.showWarning("Error","Could not hide " + "\"" + current.file.getName() + "\".",null);
    return;
  }
  current.file=newFile;
  if (hiddenCount == hidden.length) {
    SketchCode temp[]=new SketchCode[hiddenCount + 1];
    System.arraycopy(hidden,0,temp,0,hiddenCount);
    hidden=temp;
  }
  hidden[hiddenCount++]=current;
  removeCode(current);
  setCurrent(0);
  editor.header.repaint();
}
