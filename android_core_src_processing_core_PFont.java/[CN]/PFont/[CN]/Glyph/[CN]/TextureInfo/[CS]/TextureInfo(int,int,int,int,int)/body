{
  tex=n;
  crop=new int[4];
  crop[0]=cropX;
  crop[1]=cropY;
  crop[2]=cropW;
  crop[3]=cropH;
  u0=(float)cropX / (float)textures[n].glWidth;
  u1=u0 + (float)cropW / (float)textures[n].glWidth;
  v0=(float)(cropY + cropH) / (float)textures[n].glHeight;
  v1=(float)cropY / (float)textures[n].glHeight;
}
