{
  float xStep=(x2 - x1) / steps;
  float yStep=(y2 - y1) / steps;
  for (int i=0; i < steps; i++) {
    if (style == SCRIBBLE) {
      if (i < steps - 1) {
        line(x1,y1,x1+=xStep + random(-scribVal,scribVal),y1+=yStep + random(-scribVal,scribVal));
      }
 else {
        line(x1,y1,x2,y2);
      }
    }
 else     if (style == HATCHING) {
      line(x1,y1,(x1+=xStep) + random(-scribVal,scribVal),(y1+=yStep) + random(-scribVal,scribVal));
    }
  }
}
