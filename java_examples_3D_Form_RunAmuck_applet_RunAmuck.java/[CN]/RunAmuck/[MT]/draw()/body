{
  background(0);
  translate(width / 2,height / 2);
  noStroke();
  fill(35);
  beginShape();
  vertex(-width * 2,0,-1000);
  vertex(width * 2,0,-1000);
  vertex(width / 2,height / 2,400);
  vertex(-width / 2,height / 2,400);
  endShape(CLOSE);
  for (int i=0; i < legs.length; i++) {
    legs[i].create();
    legs[i].step(random(10,50));
    legs[i].move();
  }
}
