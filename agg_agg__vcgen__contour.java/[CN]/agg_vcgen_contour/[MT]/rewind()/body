{
  if (m_status == initial) {
    m_src_vertices.close(true);
    m_signed_width=m_width;
    if (m_auto_detect) {
      if (!is_oriented(m_orientation)) {
        m_orientation=(calc_polygon_area(m_src_vertices) > 0.0f) ? path_flags_ccw : path_flags_cw;
      }
    }
    if (is_oriented(m_orientation)) {
      m_signed_width=is_ccw(m_orientation) ? m_width : -m_width;
    }
  }
  m_status=ready;
  m_src_vertex=0;
}
