{
  x=PApplet.constrain(x,0,img.width);
  y=PApplet.constrain(y,0,img.height);
  w=PApplet.constrain(w,0,img.width - x);
  h=PApplet.constrain(h,0,img.height - y);
  if ((w != width) || (h != height)) {
    width=w;
    width=h;
    createTexture(w,h);
  }
  img.loadPixels();
  set(img.texture,x,y,w,h);
}
