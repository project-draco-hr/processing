{
  width=w;
  height=h;
  if (PGraphicsAndroid3D.npotTexSupported) {
    glWidth=w;
    glHeight=h;
  }
 else {
    glWidth=PGL.nextPowerOfTwo(w);
    glHeight=PGL.nextPowerOfTwo(h);
  }
  if ((glWidth > PGraphicsAndroid3D.maxTextureSize) || (glHeight > PGraphicsAndroid3D.maxTextureSize)) {
    glWidth=glHeight=0;
    throw new RuntimeException("Image width and height cannot be" + " larger than " + PGraphicsAndroid3D.maxTextureSize + " with this graphics card.");
  }
  maxTexCoordU=(float)width / glWidth;
  maxTexCoordV=(float)height / glHeight;
}
