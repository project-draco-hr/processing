{
  if (folder == null)   return;
  if (!folder.isDirectory())   return;
  for (  File f : folder.listFiles()) {
    if (!f.delete()) {
      if (f.isDirectory()) {
        deleteFolderContents(f);
      }
 else {
        ProcessingLog.logError("Could not delete " + f.getName() + ". If it causes problems, you may have to manually delete it. You can find it here: "+ f.getAbsolutePath(),null);
      }
    }
  }
}
