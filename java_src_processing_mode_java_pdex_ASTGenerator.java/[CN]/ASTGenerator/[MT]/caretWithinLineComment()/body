{
  final JEditTextArea ta=editor.getTextArea();
  String pdeLine=editor.getLineText(ta.getCaretLine()).trim();
  int caretPos=ta.getCaretPosition() - ta.getLineStartNonWhiteSpaceOffset(ta.getCaretLine());
  int x=pdeLine.indexOf("//");
  if (x >= 0 && caretPos > x) {
    return true;
  }
  return false;
}
