{
  char ch;
  ch='*';
  while (true) {
switch (ch) {
default :
      ch=buf[j++]=getchr();
    if (ch == '\\') {
      buf[j++]=getchr();
      break;
    }
  if (ch == '\'' || ch == '"') {
    cc=buf[j++]=getchr();
    while (!EOF && cc != ch) {
      if (cc == '\\')       buf[j++]=getchr();
      cc=buf[j++]=getchr();
    }
    break;
  }
if (ch == '\n' || ch == '\r') {
  indent_puts();
  a_flg=1;
  break;
}
 else {
  return (ch);
}
}
}
}
