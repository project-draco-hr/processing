{
  if (currentLine.length() > 0) {
    if (s_flg) {
      final boolean shouldIndent=(tabs > 0) && (currentLine.charAt(0) != '{') && a_flg;
      if (shouldIndent) {
        tabs++;
      }
      p_tabs();
      s_flg=false;
      if (shouldIndent) {
        tabs--;
      }
      a_flg=false;
    }
    result.append(currentLine);
    currentLine.setLength(0);
  }
 else   if (s_flg) {
    s_flg=a_flg=false;
  }
}
