{
switch (image_mode) {
case CORNER:
    sx2+=sx1;
  sy2+=sy1;
dx2+=dx1;
dy2+=dy1;
break;
case CENTER:
sx2/=2f;
sy2/=2f;
dx2/=2f;
dy2/=2f;
break;
case CENTER_RADIUS:
int hr, vr;
hr=sx2;
sx2=sx1 + hr;
sx1-=hr;
vr=sy2;
sy2=sy1 + vr;
sy1-=vr;
hr=dx2;
dx2=dx1 + hr;
dx1-=hr;
vr=dy2;
dy2=dy1 + vr;
dy1-=vr;
break;
}
blit_resize(src,sx1,sy1,sx2,sy2,pixels,width,height,dx1,dy1,dx2,dy2,REPLACE);
}
