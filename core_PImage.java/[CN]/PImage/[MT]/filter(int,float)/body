{
switch (kind) {
case BLACK_WHITE:
    int thresh=(int)(param * 255);
  for (int i=0; i < pixels.length; i++) {
    int max=Math.max((pixels[i] & RED_MASK) >> 16,Math.max((pixels[i] & GREEN_MASK) >> 8,(pixels[i] & BLUE_MASK)));
    pixels[i]=(pixels[i] & ALPHA_MASK) | ((max < thresh) ? 0x000000 : 0xffffff);
  }
break;
case GRAYSCALE:
filter(GRAYSCALE);
break;
}
}
