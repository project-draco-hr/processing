{
  this.word1=pdeCode;
  this.word2=javaCode;
  if (word1.trim().equals(word2.trim())) {
    matchingNeeded=false;
    offsetMatch=new ArrayList<OffsetMatcher.OffsetPair>();
    log("Offset Matching not needed");
  }
 else {
    matchingNeeded=true;
    minDistance();
  }
  for (int i=0; i < offsetMatch.size(); i++) {
    log(offsetMatch.get(i).pdeOffset + " <-> " + offsetMatch.get(i).javaOffset+ ", "+ word1.charAt(offsetMatch.get(i).pdeOffset)+ " <-> "+ word2.charAt(offsetMatch.get(i).javaOffset));
  }
}
