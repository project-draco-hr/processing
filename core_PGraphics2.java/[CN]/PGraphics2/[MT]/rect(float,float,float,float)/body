{
switch (rectMode) {
case CORNERS:
    rect.setFrameFromDiagonal(x1,y1,x2,y2);
  break;
case CORNER:
rect.setFrame(x1,y1,x2,y2);
break;
case CENTER_RADIUS:
rect.setFrame(x1 - x2,y1 - y2,x1 + x2,y1 + y2);
break;
case CENTER:
rect.setFrame(x1 - x2 / 2.0f,y1 - y2 / 2.0f,x1 + x2 / 2.0f,y1 + y2 / 2.0f);
break;
}
draw_shape(rect);
}
