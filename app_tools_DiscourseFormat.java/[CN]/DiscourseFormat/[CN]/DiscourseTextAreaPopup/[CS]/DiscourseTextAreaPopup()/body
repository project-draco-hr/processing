{
  JMenuItem item;
  copyItem=new JMenuItem("Copy");
  copyItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      textarea.copy();
    }
  }
);
  this.add(copyItem);
  item=new JMenuItem("Select All");
  item.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      textarea.selectAll();
    }
  }
);
  this.add(item);
}
