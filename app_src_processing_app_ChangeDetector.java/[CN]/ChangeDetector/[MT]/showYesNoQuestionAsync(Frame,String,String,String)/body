{
  final int[] res={-1};
  try {
    EventQueue.invokeAndWait(new Runnable(){
      @Override public void run(){
        res[0]=Base.showYesNoQuestion(editor,title,message1,message2);
      }
    }
);
  }
 catch (  InvocationTargetException e) {
    e.printStackTrace();
  }
catch (  InterruptedException e) {
    e.printStackTrace();
  }
  return res[0];
}
