{
  try {
    new SwingWorker(){
      protected Object doInBackground() throws Exception {
        LineMarker m=findClosestMarker(y);
        if (m != null) {
          editor.getErrorChecker().scrollToErrorLine(m.getProblem());
        }
        return null;
      }
    }
.execute();
  }
 catch (  Exception ex) {
    ex.printStackTrace();
  }
}
