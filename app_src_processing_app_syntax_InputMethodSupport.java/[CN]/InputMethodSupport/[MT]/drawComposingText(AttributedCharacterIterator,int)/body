{
  assert((count == 0 && text.getEndIndex() > 0));
  Point textLocation=getCaretLocation();
  invalidateComposingLine(textArea.getPainter(),textLocation.x,textLocation.y);
  composedTextLayout=getTextLayout(text,count);
  composedTextLayout.draw((Graphics2D)(textArea.getPainter().getGraphics()),textLocation.x,textLocation.y);
}
