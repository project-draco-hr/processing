{
  if (visible) {
    if (matrix != null) {
      g.pushMatrix();
      g.applyMatrix(matrix);
    }
    if (family == GROUP) {
      init();
      for (int i=0; i < childCount; i++) {
        ((PShape3D)children[i]).draw(g);
      }
    }
 else {
      drawGeometry(g);
    }
    if (matrix != null) {
      g.popMatrix();
    }
  }
}
