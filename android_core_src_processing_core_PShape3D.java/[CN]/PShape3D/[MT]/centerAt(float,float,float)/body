{
  loadVertices();
  float dx=cx - 0.5f * (xmin + xmax);
  float dy=cy - 0.5f * (ymin + ymax);
  float dz=cz - 0.5f * (zmin + zmax);
  for (int i=0; i < vertexCount; i++) {
    vertices[3 * i + 0]+=dx;
    vertices[3 * i + 1]+=dy;
    vertices[3 * i + 2]+=dz;
  }
  xmin+=dx;
  xmax+=dx;
  ymin+=dy;
  ymax+=dy;
  zmin+=dz;
  zmax+=dz;
  updateVertices();
}
