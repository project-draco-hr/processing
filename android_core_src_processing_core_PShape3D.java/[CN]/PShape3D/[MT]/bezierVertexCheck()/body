{
  if (kind != POLYGON) {
    throw new RuntimeException("createGeometry() or createGeometry(POLYGON) " + "must be used before bezierVertex() or quadraticVertex()");
  }
  if (in.vertexCount == 0) {
    throw new RuntimeException("vertex() must be used at least once" + "before bezierVertex() or quadraticVertex()");
  }
}
