{
  boolean prompt=Preferences.getBoolean("sketchbook.prompt");
  if (shiftDown)   prompt=!prompt;
  try {
    String path=null;
    if (prompt) {
      path=sketchbook.handleNewPrompt();
    }
 else {
      path=sketchbook.handleNewUntitled();
    }
    if (path != null) {
      base.handleOpen(path);
    }
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
