{
  beginCompoundEdit();
  textarea.setText(what);
  endCompoundEdit();
  selectionStart=Math.max(0,Math.min(selectionStart,textarea.getDocumentLength()));
  selectionStop=Math.max(0,Math.min(selectionStart,textarea.getDocumentLength()));
  textarea.select(selectionStart,selectionStop);
  textarea.requestFocus();
}
