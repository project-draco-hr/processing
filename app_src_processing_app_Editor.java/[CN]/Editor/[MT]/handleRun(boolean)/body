{
  internalCloseRunner();
  running=true;
  toolbar.activate(EditorToolbar.RUN);
  statusEmpty();
  for (int i=0; i < 10; i++)   System.out.println();
  if (Preferences.getBoolean("console.auto_clear")) {
    console.clear();
  }
  if (present) {
    new Thread(presentHandler).start();
  }
 else {
    new Thread(runHandler).start();
  }
}
