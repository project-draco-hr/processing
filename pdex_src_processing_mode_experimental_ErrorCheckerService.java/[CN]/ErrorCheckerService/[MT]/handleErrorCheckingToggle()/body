{
  if (!ExperimentalMode.errorCheckEnabled) {
    pauseThread();
    log(editor.getSketch().getName() + " - Error Checker paused.");
    editor.errorBar.errorPoints.clear();
    problemsList.clear();
    updateErrorTable();
    updateEditorStatus();
    editor.getTextArea().repaint();
    editor.errorBar.repaint();
  }
 else {
    resumeThread();
    log(editor.getSketch().getName() + " - Error Checker resumed.");
    runManualErrorCheck();
  }
}
