{
  if (editor.getStatusMode() == EditorStatus.EDIT)   return;
  if (ExperimentalMode.errorCheckEnabled) synchronized (editor.errorBar.errorPoints) {
    for (    ErrorMarker emarker : editor.errorBar.errorPoints) {
      if (emarker.getProblem().getLineNumber() == editor.getTextArea().getCaretLine() + 1) {
        if (emarker.getType() == ErrorMarker.Warning) {
          editor.statusNotice(emarker.getProblem().getMessage());
        }
 else {
          editor.statusError(emarker.getProblem().getMessage());
        }
        return;
      }
    }
  }
  if (editor.getStatusMode() == EditorStatus.ERR || editor.getStatusMode() == EditorStatus.NOTICE) {
    editor.statusEmpty();
    return;
  }
}
