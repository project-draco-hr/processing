{
  if (editor.getStatusMode() == EditorStatus.EDIT)   return;
  if (ExperimentalMode.errorCheckEnabled) synchronized (editor.errorBar.errorPoints) {
    for (    ErrorMarker emarker : editor.errorBar.errorPoints) {
      if (emarker.getProblem().getLineNumber() == editor.getTextArea().getCaretLine()) {
        if (emarker.getType() == ErrorMarker.Warning) {
          editor.statusMessage(emarker.getProblem().getMessage(),DebugEditor.STATUS_INFO);
        }
 else {
          editor.statusMessage(emarker.getProblem().getMessage(),DebugEditor.STATUS_COMPILER_ERR);
        }
        return;
      }
    }
  }
  if (editor.statusMessageType == DebugEditor.STATUS_COMPILER_ERR) {
    editor.statusEmpty();
    return;
  }
}
