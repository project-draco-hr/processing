{
  if (editor == null) {
    return;
  }
  if (p == null)   return;
  try {
    editor.toFront();
    editor.getSketch().setCurrentCode(p.getTabIndex());
    editor.setSelection(editor.getTextArea().getLineStartNonWhiteSpaceOffset(p.getLineNumber() - 1) + editor.getTextArea().getLineText(p.getLineNumber() - 1).trim().length(),editor.getTextArea().getLineStartNonWhiteSpaceOffset(p.getLineNumber() - 1));
    editor.getTextArea().scrollTo(p.getLineNumber() - 1,0);
    editor.repaint();
  }
 catch (  Exception e) {
    System.err.println(e + " : Error while selecting text in scrollToErrorLine()");
    e.printStackTrace();
  }
}
