{
  filter=".*" + filter.toLowerCase() + ".*";
  if (filter.isEmpty()) {
    return true;
  }
  for (  Author author : libInfo.authors) {
    if (author.name.toLowerCase().matches(filter)) {
      return true;
    }
  }
  return libInfo.description.toLowerCase().matches(filter) || libInfo.categoryName.toLowerCase().matches(filter) || libInfo.displayName.toLowerCase().matches(filter);
}
