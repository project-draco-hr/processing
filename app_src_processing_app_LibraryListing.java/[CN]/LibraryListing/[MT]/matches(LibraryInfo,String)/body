{
  filter=".*" + filter.toLowerCase() + ".*";
  if (filter.isEmpty()) {
    return true;
  }
  for (  Author author : libInfo.authorList) {
    if (author.name.toLowerCase().matches(filter)) {
      return true;
    }
  }
  return libInfo.sentence != null && libInfo.sentence.toLowerCase().matches(filter) || libInfo.paragraph != null && libInfo.paragraph.toLowerCase().matches(filter) || libInfo.category != null && libInfo.category.toLowerCase().matches(filter) || libInfo.name != null && libInfo.name.toLowerCase().matches(filter);
}
