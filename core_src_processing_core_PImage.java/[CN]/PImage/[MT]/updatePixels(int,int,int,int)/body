{
  if (imageMode == CORNER) {
    x2+=x1;
    y2+=y1;
  }
  if (!modified) {
    mx1=x1;
    mx2=x2;
    my1=y1;
    my2=y2;
    modified=true;
  }
 else {
    if (x1 < mx1)     mx1=x1;
    if (x1 > mx2)     mx2=x1;
    if (y1 < my1)     my1=y1;
    if (y1 > my2)     my2=y1;
    if (x2 < mx1)     mx1=x2;
    if (x2 > mx2)     mx2=x2;
    if (y2 < my1)     my1=y2;
    if (y2 > my2)     my2=y2;
  }
}
