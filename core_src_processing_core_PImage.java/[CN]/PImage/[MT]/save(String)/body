{
  boolean success=false;
  if (parent != null) {
    filename=parent.savePath(filename);
  }
 else {
    String msg="PImage.save() requires an absolute path. " + "Use createImage(), or pass savePath() to save().";
    PGraphics.showException(msg);
  }
  loadPixels();
  try {
    OutputStream os=null;
    if (saveImageFormats == null) {
      saveImageFormats=javax.imageio.ImageIO.getWriterFormatNames();
    }
    if (saveImageFormats != null) {
      for (int i=0; i < saveImageFormats.length; i++) {
        if (filename.endsWith("." + saveImageFormats[i])) {
          saveImageIO(filename);
          return;
        }
      }
    }
    if (filename.toLowerCase().endsWith(".tga")) {
      os=new BufferedOutputStream(new FileOutputStream(filename),32768);
      success=saveTGA(os);
    }
 else {
      if (!filename.toLowerCase().endsWith(".tif") && !filename.toLowerCase().endsWith(".tiff")) {
        filename+=".tif";
      }
      os=new BufferedOutputStream(new FileOutputStream(filename),32768);
      success=saveTIFF(os);
    }
    os.flush();
    os.close();
  }
 catch (  IOException e) {
    e.printStackTrace();
    success=false;
  }
  if (!success) {
    throw new RuntimeException("Error while saving image.");
  }
}
