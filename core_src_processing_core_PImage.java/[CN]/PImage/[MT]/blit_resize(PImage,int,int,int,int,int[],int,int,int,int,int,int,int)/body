}
destOffset+=screenW;
srcYOffset+=dy;
}
break;
case BURN:
for (int y=0; y < destH; y++) {
sX=srcXOffset;
sY=(srcYOffset >> PRECISIONB) * img.pixelWidth;
for (int x=0; x < destW; x++) {
destPixels[destOffset + x]=blend_burn(destPixels[destOffset + x],srcBuffer[sY + (sX >> PRECISIONB)]);
sX+=dx;
}
destOffset+=screenW;
srcYOffset+=dy;
}
break;
}
}
