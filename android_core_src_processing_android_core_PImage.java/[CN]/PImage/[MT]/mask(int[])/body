{
  loadPixels();
  if (alpha.length != pixels.length) {
    throw new RuntimeException("The PImage used with mask() must be " + "the same size as the applet.");
  }
  for (int i=0; i < pixels.length; i++) {
    pixels[i]=((alpha[i] & 0xff) << 24) | (pixels[i] & 0xffffff);
  }
  format=ARGB;
  updatePixels();
}
