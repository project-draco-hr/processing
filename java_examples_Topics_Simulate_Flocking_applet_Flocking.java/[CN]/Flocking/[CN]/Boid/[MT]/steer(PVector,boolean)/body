{
  PVector steer;
  PVector desired=target.sub(target,loc);
  float d=desired.mag();
  if (d > 0) {
    desired.normalize();
    if ((slowdown) && (d < 100.0f))     desired.mult(maxspeed * (d / 100.0f));
 else     desired.mult(maxspeed);
    steer=target.sub(desired,vel);
    steer.limit(maxforce);
  }
 else {
    steer=new PVector(0,0);
  }
  return steer;
}
