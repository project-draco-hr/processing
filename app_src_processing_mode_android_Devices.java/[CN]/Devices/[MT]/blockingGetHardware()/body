{
  Device hardware=find(false);
  if (hardware != null) {
    return hardware;
  }
  while (!Thread.currentThread().isInterrupted()) {
    try {
      Thread.sleep(2000);
    }
 catch (    final InterruptedException e) {
      return null;
    }
    hardware=find(false);
    if (hardware != null) {
      return hardware;
    }
  }
  return null;
}
