{
  if (primarySurface) {
    setCurrentPG(this);
  }
 else {
    throw new RuntimeException("GLW renderer cannot be used as an offscreen surface");
  }
  report("top beginDraw()");
  if (!checkGLThread()) {
    return;
  }
  if (drawing) {
    return;
  }
  if (!glParamsRead) {
    getGLParameters();
  }
  drawing=true;
  report("bot beginDraw()");
}
