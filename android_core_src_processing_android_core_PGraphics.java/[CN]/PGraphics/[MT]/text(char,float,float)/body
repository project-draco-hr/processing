{
  if (textFont == null) {
    showTextFontException("text");
  }
  if (textMode == SCREEN)   loadPixels();
  if (textAlignY == CENTER) {
    y+=textAscent() / 2;
  }
 else   if (textAlignY == TOP) {
    y+=textAscent();
  }
 else   if (textAlignY == BOTTOM) {
    y-=textDescent();
  }
  textBuffer[0]=c;
  textLineAlignImpl(textBuffer,0,1,x,y);
  if (textMode == SCREEN)   updatePixels();
}
