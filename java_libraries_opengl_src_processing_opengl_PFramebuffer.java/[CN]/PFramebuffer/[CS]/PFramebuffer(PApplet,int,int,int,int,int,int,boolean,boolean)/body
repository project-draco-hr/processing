{
  this.parent=parent;
  ogl=(PGraphicsOpenGL)parent.g;
  ogl.registerGLObject(this);
  glFboID=0;
  glDepthBufferID=0;
  glStencilBufferID=0;
  glDepthStencilBufferID=0;
  glColorBufferMultisampleID=0;
  fboMode=PGraphicsOpenGL.fboSupported;
  allocate(w,h,samples,colorBuffers,depthBits,stencilBits,combinedDepthStencil,screen);
  noDepth=false;
  pixelBuffer=null;
  if (!screenFb && !fboMode) {
    backupTexture=new PTexture(parent,width,height,new PTexture.Parameters(ARGB,POINT));
  }
}
