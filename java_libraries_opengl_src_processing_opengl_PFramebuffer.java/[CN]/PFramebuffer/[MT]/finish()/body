{
  if (noDepth) {
    if (renderer.hintEnabled(DISABLE_DEPTH_TEST)) {
      pgl.disableDepthTest();
    }
 else {
      pgl.enableDepthTest();
    }
  }
  if (!screenFb && !fboMode) {
    copyToColorBuffers();
    restoreBackup();
    if (!noDepth) {
      pgl.setClearColor(0,0,0,0);
      pgl.clearDepthBuffer();
    }
  }
}
