{
  if (matrix instanceof PMatrix2D) {
    PMatrix2D source=(PMatrix2D)matrix;
    apply(source.m00,source.m01,0,source.m02,source.m10,source.m11,0,source.m12,0,0,1,0,0,0,0,1);
  }
 else   if (matrix instanceof PMatrix3D) {
    PMatrix3D source=(PMatrix3D)matrix;
    apply(source.m00,source.m01,source.m02,source.m03,source.m10,source.m11,source.m12,source.m13,source.m20,source.m21,source.m22,source.m23,source.m30,source.m31,source.m32,source.m33);
  }
}
