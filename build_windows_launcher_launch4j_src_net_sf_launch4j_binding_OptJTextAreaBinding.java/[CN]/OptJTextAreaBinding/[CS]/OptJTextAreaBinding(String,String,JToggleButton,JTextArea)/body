{
  if (property == null || button == null || textArea == null) {
    throw new NullPointerException();
  }
  if (property.equals("")) {
    throw new IllegalArgumentException();
  }
  _property=property;
  _stateProperty=stateProperty;
  _button=button;
  _textArea=textArea;
  _validColor=_textArea.getBackground();
  button.addActionListener(this);
}
