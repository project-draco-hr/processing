{
  String sketchName=editor.getSketch().getName();
  Object[] options={"Yes, please","No, thanks"};
  int result=JOptionPane.showOptionDialog(editor,"Is " + sketchName + " ready for destruction?","Super Mangle Tron",JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE,null,options,options[1]);
  if (result == JOptionPane.YES_OPTION) {
    mangleSelection();
  }
}
