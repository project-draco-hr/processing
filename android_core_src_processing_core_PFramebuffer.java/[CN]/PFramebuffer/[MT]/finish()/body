{
  if (!screenFb && !FboMode) {
    copyToColorBuffers();
    restoreBackup();
    if (noDepth) {
      if (a3d.hints[DISABLE_DEPTH_TEST]) {
        gl.glDisable(GL10.GL_DEPTH_TEST);
      }
 else {
        gl.glEnable(GL10.GL_DEPTH_TEST);
      }
    }
 else {
      gl.glClearColor(0,0,0,0);
      gl.glClear(GL10.GL_DEPTH_BUFFER_BIT);
    }
  }
}
