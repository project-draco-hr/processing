{
  if (glFboID != 0) {
    int[] tmp={glFboID};
    gl11xp.glDeleteFramebuffersOES(1,tmp,0);
    glFboID=0;
  }
  if (glDepthBufferID != 0) {
    int[] tmp={glDepthBufferID};
    gl11xp.glDeleteRenderbuffersOES(1,tmp,0);
    glDepthBufferID=0;
  }
  if (glStencilBufferID != 0) {
    int[] tmp={glStencilBufferID};
    gl11xp.glDeleteRenderbuffersOES(1,tmp,0);
    glStencilBufferID=0;
  }
  width=height=0;
}
