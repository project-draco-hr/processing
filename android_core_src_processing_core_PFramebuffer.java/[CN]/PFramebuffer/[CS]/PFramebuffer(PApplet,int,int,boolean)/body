{
  gl=a3d.gl11xp;
  if (gl == null) {
    throw new RuntimeException("PFramebuffer: OpenGL ES 1.1 Extension Pack required");
  }
  if (!a3d.fboSupported) {
    throw new RuntimeException("PFramebuffer: Frame Buffer Objects are not available");
  }
  int[] tmp=new int[1];
  gl.glGenFramebuffersOES(1,tmp,0);
  glFboID=tmp[0];
  width=w;
  height=h;
}
