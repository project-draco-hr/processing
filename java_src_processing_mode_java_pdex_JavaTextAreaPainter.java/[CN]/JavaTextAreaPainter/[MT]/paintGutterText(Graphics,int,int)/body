{
  String text=getTextArea().getGutterText(line);
  if (text == null) {
    return;
  }
  gfx.setFont(getFont());
  Color textColor=getTextArea().getGutterTextColor(line);
  if (textColor == null) {
    gfx.setColor(getForeground());
  }
 else {
    gfx.setColor(textColor);
  }
  int y=textArea.lineToY(line) + fm.getHeight();
  Utilities.drawTabbedText(new Segment(text.toCharArray(),0,text.length()),getGutterMargins(),y,gfx,this,0);
  Utilities.drawTabbedText(new Segment(text.toCharArray(),0,text.length()),getGutterMargins() + 1,y,gfx,this,0);
  Utilities.drawTabbedText(new Segment(text.toCharArray(),0,text.length()),getGutterMargins(),y + 1,gfx,this,0);
  Utilities.drawTabbedText(new Segment(text.toCharArray(),0,text.length()),getGutterMargins() + 1,y + 1,gfx,this,0);
}
