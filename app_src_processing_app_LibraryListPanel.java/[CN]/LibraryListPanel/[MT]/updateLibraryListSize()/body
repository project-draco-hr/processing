{
  int height=0;
  int width=0;
  for (  Component c : getComponents()) {
    if (c.isVisible()) {
      if (c instanceof LibraryListPanel) {
        Dimension d=c.getSize();
        if (d.width > width) {
          width=d.width;
        }
        height+=d.height;
      }
    }
  }
  setPreferredSize(new Dimension(width,height));
}
