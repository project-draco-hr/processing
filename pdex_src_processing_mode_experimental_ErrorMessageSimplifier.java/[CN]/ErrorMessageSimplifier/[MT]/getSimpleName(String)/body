{
  if (inp.indexOf('.') < 0)   return inp;
  String res="";
  ArrayList<String> names=new ArrayList<String>();
  if (inp.indexOf(',') >= 0) {
    String arr[]=inp.split(",");
    for (int i=0; i < arr.length; i++) {
      names.add(arr[i]);
    }
  }
 else   names.add(inp);
  for (  String n : names) {
    int x=n.lastIndexOf('.');
    if (x >= 0) {
      n=n.substring(x + 1,n.length());
    }
    res=res + ", " + n;
  }
  return res.substring(2,res.length());
}
