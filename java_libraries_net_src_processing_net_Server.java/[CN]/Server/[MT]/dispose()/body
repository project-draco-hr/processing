{
  thread=null;
  if (clients != null) {
    for (int i=0; i < clientCount; i++) {
      disconnect(clients[i]);
    }
    clientCount=0;
    clients=null;
  }
  try {
    if (server != null) {
      server.close();
      server=null;
    }
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
