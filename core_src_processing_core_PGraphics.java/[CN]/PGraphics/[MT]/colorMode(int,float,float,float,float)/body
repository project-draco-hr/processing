{
  colorMode=mode;
  colorModeX=maxX;
  colorModeY=maxY;
  colorModeZ=maxZ;
  colorModeA=maxA;
  colorScale=((maxA != 1) || (maxX != maxY) || (maxY != maxZ)|| (maxZ != maxA));
  colorRgb255=(colorMode == RGB) && (colorModeA == 255) && (colorModeX == 255)&& (colorModeY == 255)&& (colorModeZ == 255);
}
