{
  if ((mode == LEFT) || (mode == RIGHT)) {
    showError("Since Processing beta, textMode() is now textAlign().");
    return;
  }
  if (textModeCheck(mode)) {
    textMode=mode;
  }
 else {
    String modeStr=String.valueOf(mode);
switch (mode) {
case SCREEN:
      modeStr="SCREEN";
    break;
case MODEL:
  modeStr="MODEL";
break;
case SHAPE:
modeStr="SHAPE";
break;
}
showError("textMode(" + modeStr + ") is not supported by this renderer.");
}
}
