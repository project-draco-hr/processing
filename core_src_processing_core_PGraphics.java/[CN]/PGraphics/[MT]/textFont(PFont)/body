{
  if (which != null) {
    textFont=which;
    if (hints[ENABLE_NATIVE_FONTS]) {
      if (which.font == null) {
        which.findFont();
      }
    }
    textFontNative=which.font;
    if (textFontNative != null) {
      textFontNativeMetrics=Toolkit.getDefaultToolkit().getFontMetrics(textFontNative);
    }
    textSize(which.size);
  }
 else {
    throw new RuntimeException("a null PFont was passed to textFont()");
  }
}
