{
  if (image.width == -1 || image.height == -1)   return;
  if (imageMode == CORNER) {
    if (c < 0) {
      a+=c;
      c=-c;
    }
    if (d < 0) {
      b+=d;
      d=-d;
    }
    imageImpl(image,a,b,a + c,b + d,u1,v1,u2,v2);
  }
 else   if (imageMode == CORNERS) {
    if (c < a) {
      float temp=a;
      a=c;
      c=temp;
    }
    if (d < b) {
      float temp=b;
      b=d;
      d=temp;
    }
    imageImpl(image,a,b,c,d,u1,v1,u2,v2);
  }
}
