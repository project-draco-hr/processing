{
  if (which == ENABLE_NATIVE_FONTS || which == DISABLE_NATIVE_FONTS) {
    showWarning("hint(ENABLE_NATIVE_FONTS) no longer supported. " + "Use createFont() instead.");
  }
  if (which == ENABLE_KEY_AUTO_REPEAT) {
    parent.isKeyAutoRepeatEnabled=true;
  }
 else   if (which == DISABLE_KEY_AUTO_REPEAT) {
    parent.isKeyAutoRepeatEnabled=false;
  }
  if (which > 0) {
    hints[which]=true;
  }
 else {
    hints[-which]=false;
  }
}
