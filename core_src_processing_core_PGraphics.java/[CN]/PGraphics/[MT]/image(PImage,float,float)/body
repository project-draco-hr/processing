{
  if (img.width == -1 || img.height == -1)   return;
  if (imageMode == CORNER || imageMode == CORNERS) {
    imageImpl(img,x,y,x + img.width,y + img.height,0,0,img.width,img.height);
  }
 else   if (imageMode == CENTER) {
    float x1=x - img.width / 2;
    float y1=y - img.height / 2;
    imageImpl(img,x1,y1,x1 + img.width,y1 + img.height,0,0,img.width,img.height);
  }
}
