{
  float hradius, vradius;
switch (rectMode) {
case CORNERS:
    break;
case CORNER:
  x2+=x1;
y2+=y1;
break;
case CENTER_RADIUS:
hradius=x2;
vradius=y2;
x2=x1 + hradius;
y2=y1 + vradius;
x1-=hradius;
y1-=vradius;
break;
case CENTER:
hradius=x2 / 2.0f;
vradius=y2 / 2.0f;
x2=x1 + hradius;
y2=y1 + vradius;
x1-=hradius;
y1-=vradius;
}
if (x1 > x2) {
float temp=x1;
x1=x2;
x2=temp;
}
if (y1 > y2) {
float temp=y1;
y1=y2;
y2=temp;
}
rectImpl(x1,y1,x2,y2);
}
