{
  if (!curve_inited)   curve_init();
  float tt3=t * t * 3;
  float t2=t * 2;
  float m[][]=curve_basis;
  return (a * (tt3 * m[0][0] + t2 * m[1][0] + m[2][0]) + b * (tt3 * m[0][1] + t2 * m[1][1] + m[2][1]) + c * (tt3 * m[0][2] + t2 * m[1][2] + m[2][2]) + d * (tt3 * m[0][3] + t2 * m[1][3] + m[2][3]));
}
