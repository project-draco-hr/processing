{
  if (!curve_inited)   curve_init();
  float tt3=t * t * 3;
  float t2=t * 2;
  PMatrix3D cb=curveBasisMatrix;
  return (a * (tt3 * cb.m00 + t2 * cb.m10 + cb.m20) + b * (tt3 * cb.m01 + t2 * cb.m11 + cb.m21) + c * (tt3 * cb.m02 + t2 * cb.m12 + cb.m22) + d * (tt3 * cb.m03 + t2 * cb.m13 + cb.m23));
}
