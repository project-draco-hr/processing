{
  if (width == 0 || height == 0)   return;
  if (texture == null) {
    if (texParams == null) {
      texParams=PTexture.newParameters();
    }
    texParams.sampling=sampling;
    texture=new PTexture(parent,width,height,texParams);
  }
  if (pixels == null) {
    loadPixels();
  }
 else {
    pixelsToTexture();
  }
}
