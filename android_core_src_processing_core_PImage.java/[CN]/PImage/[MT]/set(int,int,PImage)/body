{
  if (img.format == ALPHA) {
    throw new IllegalArgumentException("set() not available for ALPHA images");
  }
  int sx=0;
  int sy=0;
  int sw=img.width;
  int sh=img.height;
  if (x < 0) {
    sx-=x;
    sw+=x;
    x=0;
  }
  if (y < 0) {
    sy-=y;
    sh+=y;
    y=0;
  }
  if (x + sw > width) {
    sw=width - x;
  }
  if (y + sh > height) {
    sh=height - y;
  }
  if ((sw <= 0) || (sh <= 0))   return;
  setImpl(img,sx,sy,sw,sh,x,y);
}
