{
  if (node == null)   return null;
switch (node.getNodeType()) {
case ASTNode.METHOD_DECLARATION:
    return (SimpleType)((MethodDeclaration)node).getStructuralProperty(MethodDeclaration.RETURN_TYPE2_PROPERTY);
case ASTNode.FIELD_DECLARATION:
  return (SimpleType)((FieldDeclaration)node).getStructuralProperty(FieldDeclaration.TYPE_PROPERTY);
case ASTNode.VARIABLE_DECLARATION_EXPRESSION:
return (SimpleType)((VariableDeclarationExpression)node).getStructuralProperty(VariableDeclarationExpression.TYPE_PROPERTY);
case ASTNode.VARIABLE_DECLARATION_STATEMENT:
return (SimpleType)((VariableDeclarationStatement)node).getStructuralProperty(VariableDeclarationStatement.TYPE_PROPERTY);
case ASTNode.SINGLE_VARIABLE_DECLARATION:
return (SimpleType)((SingleVariableDeclaration)node).getStructuralProperty(SingleVariableDeclaration.TYPE_PROPERTY);
}
return null;
}
