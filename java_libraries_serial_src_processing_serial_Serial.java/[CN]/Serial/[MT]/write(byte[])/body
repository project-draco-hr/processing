{
  try {
    long start=System.nanoTime();
    port.writeBytes(src);
    long len=System.nanoTime() - start;
    if (maxWriteTime < len) {
      maxWriteTime=len;
    }
    sumWriteTime+=len;
    countWrites++;
  }
 catch (  SerialPortException e) {
    throw new RuntimeException("Error writing to serial port " + e.getPortName() + ": "+ e.getExceptionType());
  }
}
