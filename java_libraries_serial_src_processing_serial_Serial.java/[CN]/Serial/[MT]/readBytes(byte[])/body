{
  if (inBuffer == readOffset) {
    return 0;
  }
  long start=System.nanoTime();
synchronized (buffer) {
    long len=System.nanoTime() - start;
    if (maxSyncTime < len) {
      maxSyncTime=len;
    }
    sumSyncTime+=len;
    countSyncs++;
    int toCopy=inBuffer - readOffset;
    if (dest.length < toCopy) {
      toCopy=dest.length;
    }
    System.arraycopy(buffer,readOffset,dest,0,toCopy);
    readOffset+=toCopy;
    if (inBuffer == readOffset) {
      inBuffer=0;
      readOffset=0;
    }
    return toCopy;
  }
}
