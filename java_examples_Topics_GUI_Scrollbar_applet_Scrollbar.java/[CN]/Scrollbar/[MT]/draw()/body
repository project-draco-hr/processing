{
  background(255);
  float topPos=hs1.getPos() - width / 2;
  fill(255);
  image(top,width / 2 - topWidth / 2 + topPos * 2,0);
  float bottomPos=hs2.getPos() - width / 2;
  fill(255);
  image(bottom,width / 2 - bottomWidth / 2 + bottomPos * 2,height / 2);
  hs1.update();
  hs2.update();
  hs1.display();
  hs2.display();
}
