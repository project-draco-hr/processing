{
  float v[][]=polygon.vertices;
  int n=polygon.vertexCount;
  int j, k;
  int flag=0;
  float z;
  if (n < 3)   return true;
  for (int i=0; i < n; i++) {
    j=(i + 1) % n;
    k=(i + 2) % n;
    z=(v[j][TX] - v[i][TX]) * (v[k][TY] - v[j][TY]);
    z-=(v[j][TY] - v[i][TY]) * (v[k][TX] - v[j][TX]);
    if (z < 0)     flag|=1;
 else     if (z > 0)     flag|=2;
    if (flag == 3)     return false;
  }
  if (flag != 0)   return true;
 else   return true;
}
