{
  setPageComplete(false);
  Composite container=new Composite(parent,SWT.NULL);
  final GridLayout gridLayout=new GridLayout();
  gridLayout.numColumns=3;
  container.setLayout(gridLayout);
  setControl(container);
  final Label label=new Label(container,SWT.NONE);
  final Label label2=new Label(container,SWT.NONE);
  final GridData gridData=new GridData();
  gridData.horizontalSpan=3;
  label.setLayoutData(gridData);
  label2.setLayoutData(gridData);
  if (project != null) {
    label.setText("You're about to export " + project.getName() + " as an applet.");
    label2.setText("Click finish to proceed or cancel to select a different sketch.");
    setPageComplete(true);
  }
 else {
    label.setText("The wizard cannot figure out what you are trying to export.");
    label2.setText("Click cancel to go back and select a different sketch or .pde file.");
  }
}
