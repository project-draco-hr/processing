{
  final String primary="Attempt to fix common serial port problems?";
  final String secondary="Click ???OK??? to perform additional installation steps to enable " + "the Serial library. An administrator password will be required.";
  int result=JOptionPane.showConfirmDialog(editor,"<html> " + "<head> <style type=\"text/css\">" + "b { font: 13pt \"Lucida Grande\" }"+ "p { font: 11pt \"Lucida Grande\"; margin-top: 8px }"+ "</style> </head>"+ "<b>" + primary + "</b>"+ "<p>"+ secondary+ "</p>","Commander",JOptionPane.OK_CANCEL_OPTION,JOptionPane.QUESTION_MESSAGE);
  if (result == JOptionPane.OK_OPTION) {
    String shellScript="mkdir -p /var/lock && chmod 777 /var/lock";
    String appleScript="do shell script \"" + shellScript + "\" with administrator privileges";
    PApplet.exec(new String[]{"osascript","-e",appleScript});
  }
  editor.statusNotice("Finished.");
}
