{
  available=true;
  bufWidth=w;
  bufHeight=h;
  if (copyPixels == null) {
    copyPixels=new int[w * h];
  }
  buffer.rewind();
  try {
    buffer.get(copyPixels);
  }
 catch (  BufferUnderflowException e) {
    e.printStackTrace();
    copyPixels=null;
    return;
  }
  if (playing) {
    fireMovieEvent();
  }
}
