{
  if (seeking)   return;
  if (!sinkReady) {
    initSink();
  }
  float fps=getSourceFrameRate();
  int frame=(int)(where * fps);
  where=frame / fps;
  boolean res;
  long pos=Video.secToNanoLong(where);
  res=playBin.seek(1.0,Format.TIME,SeekFlags.FLUSH,SeekType.SET,pos,SeekType.NONE,-1);
  if (!res) {
    PGraphics.showWarning("Seek operation failed.");
  }
  seeking=true;
  playBin.getState();
  seeking=false;
}
