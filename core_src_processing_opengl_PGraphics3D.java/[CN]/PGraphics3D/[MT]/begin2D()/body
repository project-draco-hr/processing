{
  pushProjection();
  ortho(0,width,0,height,-1,+1);
  pushMatrix();
  float centerX=width / 2;
  float centerY=height / 2;
  modelview.reset();
  modelview.translate(-centerX,-centerY);
  modelviewInv.set(modelview);
  modelviewInv.invert();
  camera.set(modelview);
  cameraInv.set(modelviewInv);
  updateProjmodelview();
}
