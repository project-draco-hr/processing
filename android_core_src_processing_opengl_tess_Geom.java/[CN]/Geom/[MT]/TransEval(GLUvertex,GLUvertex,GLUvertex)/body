{
  double gapL, gapR;
  assert(TransLeq(u,v) && TransLeq(v,w));
  gapL=v.t - u.t;
  gapR=w.t - v.t;
  if (gapL + gapR > 0) {
    if (gapL < gapR) {
      return (v.s - u.s) + (u.s - w.s) * (gapL / (gapL + gapR));
    }
 else {
      return (v.s - w.s) + (w.s - u.s) * (gapR / (gapL + gapR));
    }
  }
  return 0;
}
