{
  insideResizeWait();
  insideDraw=true;
  if (!defaultsInited)   defaults();
  resetMatrix();
  vertexCount=0;
  modelview.set(camera);
  modelviewInv.set(cameraInv);
  lightCount=0;
  lightingDependsOnVertexPosition=false;
  lightFalloff(1,0,0);
  lightSpecular(0,0,0);
  lineCount=0;
  if (line != null)   line.reset();
  pathCount=0;
  triangleCount=0;
  if (triangle != null)   triangle.reset();
  vertex_start=0;
  texture_index=0;
  normal(0,0,1);
}
