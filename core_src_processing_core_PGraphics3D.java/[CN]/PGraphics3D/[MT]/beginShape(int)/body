{
  shape=kind;
  if (hints[ENABLE_DEPTH_SORT]) {
    shapeFirst=vertexCount;
    shapeLast=0;
  }
 else {
    vertexCount=0;
    if (line != null)     line.reset();
    lineCount=0;
    if (triangle != null)     triangle.reset();
    triangleCount=0;
  }
  textureImage=null;
  curveVertexCount=0;
  normalMode=NORMAL_MODE_AUTO;
}
