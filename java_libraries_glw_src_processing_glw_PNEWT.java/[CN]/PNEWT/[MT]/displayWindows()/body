{
  int totalCount=0;
  int realizedCount=0;
  for (  GLWindow win : GLW.windows.values()) {
    if (win != null) {
      totalCount++;
      if (win.isRealized())       realizedCount++;
      win.display();
    }
  }
  if (0 < totalCount && realizedCount == 0) {
    sharedDrawable.destroy();
    System.exit(0);
  }
}
