{
  if (matrix instanceof PMatrix3D) {
    PMatrix3D src=(PMatrix3D)matrix;
    set(src.m00,src.m01,src.m02,src.m03,src.m10,src.m11,src.m12,src.m13,src.m20,src.m21,src.m22,src.m23,src.m30,src.m31,src.m32,src.m33);
  }
 else {
