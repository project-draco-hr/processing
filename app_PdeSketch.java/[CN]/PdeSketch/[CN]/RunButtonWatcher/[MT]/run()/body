{
  while (Thread.currentThread() == thread) {
    if (runtime == null) {
      stop();
    }
 else {
      if (runtime.applet != null) {
        if (runtime.applet.finished) {
          stop();
        }
      }
 else       if (runtime.process != null) {
      }
 else {
        stop();
      }
    }
    try {
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
}
