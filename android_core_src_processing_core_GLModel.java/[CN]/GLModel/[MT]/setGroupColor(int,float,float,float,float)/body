{
  VertexGroup group=(VertexGroup)groups.get(gr);
  beginUpdateImpl(COLORS,group.first,group.last);
  firstUpdateIdx=group.first;
  lastUpdateIdx=group.last;
  for (int i=group.first; i <= group.last; i++) {
    colorArray[4 * i + 0]=r;
    colorArray[4 * i + 1]=g;
    colorArray[4 * i + 2]=b;
    colorArray[4 * i + 3]=a;
  }
  endUpdate();
}
