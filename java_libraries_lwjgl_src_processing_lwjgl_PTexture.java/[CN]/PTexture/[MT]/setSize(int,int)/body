{
  width=w;
  height=h;
  if (PGraphicsLWJGL.npotTexSupported) {
    glWidth=w;
    glHeight=h;
  }
 else {
    glWidth=nextPowerOfTwo(w);
    glHeight=nextPowerOfTwo(h);
  }
  if ((glWidth > PGraphicsLWJGL.maxTextureSize) || (glHeight > PGraphicsLWJGL.maxTextureSize)) {
    glWidth=glHeight=0;
    throw new RuntimeException("Image width and height cannot be" + " larger than " + PGraphicsLWJGL.maxTextureSize + " with this graphics card.");
  }
  maxTexCoordU=(float)width / glWidth;
  maxTexCoordV=(float)height / glHeight;
}
