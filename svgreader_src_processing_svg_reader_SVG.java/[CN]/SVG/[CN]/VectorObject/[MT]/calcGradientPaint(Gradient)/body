{
  if (gradient instanceof LinearGradient) {
    LinearGradient grad=(LinearGradient)gradient;
    Color c1=new Color(0xFF000000 | grad.color[0]);
    Color c2=new Color(0xFF000000 | grad.color[grad.count - 1]);
    return new GradientPaint(grad.x1,grad.y1,c1,grad.x2,grad.y2,c2);
  }
 else   if (gradient instanceof RadialGradient) {
    RadialGradient grad=(RadialGradient)gradient;
    return new RadialGradientPaint(grad.cx,grad.cy,grad.r,grad.offset,grad.color,grad.count);
  }
  return null;
}
