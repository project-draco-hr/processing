{
  File newbieDir=null;
  String newbieName=null;
  FileDialog fd=new FileDialog(parent,"Create sketch folder named:",FileDialog.SAVE);
  fd.setVisible(true);
  String newbieParentDir=fd.getDirectory();
  newbieName=fd.getFile();
  if (newbieName != null) {
    newbieName=Sketch.sanitizeName(newbieName);
    newbieDir=new File(newbieParentDir,newbieName);
    newbieDir.mkdirs();
    File newbieFile=new File(newbieDir,newbieName + ".pde");
    new FileOutputStream(newbieFile);
    handleOpen(newbieFile.getAbsolutePath());
  }
}
