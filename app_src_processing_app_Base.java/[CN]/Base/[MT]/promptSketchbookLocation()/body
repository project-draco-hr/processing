{
  File folder=null;
  folder=new File(System.getProperty("user.home"),"sketchbook");
  if (!folder.exists()) {
    folder.mkdirs();
    return folder;
  }
  String prompt="Select (or create new) folder for sketches...";
  folder=Base.selectFolder(prompt,null,null);
  if (folder == null) {
    System.exit(0);
  }
  return folder;
}
