{
  File folder=new File(System.getProperty("user.home"),"sketchbook");
  String prompt="Select a folder to place sketches...";
  folder=Base.selectFolder(prompt,folder,new Frame());
  if (folder == null) {
    System.exit(0);
  }
  if (!folder.exists()) {
    folder.mkdirs();
    return folder;
  }
  return folder;
}
