{
  int index=varIndex;
  try {
    if (type == "int") {
      OSCSender.sendInt(index,newValue.intValue(),oscPort);
    }
 else     if (type == "hex") {
      OSCSender.sendInt(index,newValue.intValue(),oscPort);
    }
 else     if (type == "webcolor") {
      OSCSender.sendInt(index,newValue.intValue(),oscPort);
    }
 else     if (type == "float") {
      OSCSender.sendFloat(index,newValue.floatValue(),oscPort);
    }
  }
 catch (  Exception e) {
    System.out.println("error sending OSC message!");
  }
}
