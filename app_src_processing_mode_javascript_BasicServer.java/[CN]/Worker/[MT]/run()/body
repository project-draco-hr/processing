{
  while (true && !stopping) {
    if (socket == null) {
      try {
        wait();
      }
 catch (      InterruptedException e) {
        continue;
      }
    }
    if (socket != null && !stopping) {
      try {
        handleClient();
      }
 catch (      Exception e) {
        e.printStackTrace();
      }
    }
    socket=null;
    return;
  }
}
