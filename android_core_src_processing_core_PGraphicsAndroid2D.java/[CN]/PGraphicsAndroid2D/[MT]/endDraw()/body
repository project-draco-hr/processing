{
  if (primarySurface) {
    Canvas screen=null;
    try {
      screen=parent.getSurfaceHolder().lockCanvas(null);
      if (screen != null) {
        screen.drawBitmap(bitmap,new Matrix(),null);
      }
    }
  finally {
      if (screen != null) {
        parent.getSurfaceHolder().unlockCanvasAndPost(screen);
      }
    }
  }
 else {
    loadPixels();
  }
  setModified();
  super.updatePixels();
}
