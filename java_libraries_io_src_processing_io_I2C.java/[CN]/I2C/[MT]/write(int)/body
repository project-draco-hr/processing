{
  if (out < 0 || 255 < out) {
    System.err.println("The write function can only operate on a single byte at a time. Call it with a value from 0 to 255.");
    throw new RuntimeException("Argument does not fit into a single byte");
  }
  byte[] tmp=new byte[1];
  tmp[0]=(byte)out;
  write(tmp);
}
