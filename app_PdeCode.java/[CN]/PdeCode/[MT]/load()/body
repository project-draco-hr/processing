{
  program=null;
  try {
    if (files[i].length() != 0) {
      BufferedReader reader=new BufferedReader(new InputStreamReader(new FileInputStream(files[i])));
      StringBuffer buffer=new StringBuffer();
      String line=null;
      while ((line=reader.readLine()) != null) {
        buffer.append(line);
        buffer.append('\n');
      }
      reader.close();
      program=buffer.toString();
    }
 else {
      program="";
    }
  }
 catch (  IOException e) {
    PdeBase.showWarning("Error loading file","Error while opening the file\n" + file.getPath(),e);
    program=null;
  }
}
