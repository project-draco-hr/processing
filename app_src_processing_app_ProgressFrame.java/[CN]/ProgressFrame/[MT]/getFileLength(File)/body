{
  long fol_len=0;
  if (f.isDirectory()) {
    String files[]=f.list();
    for (int i=0; i < files.length; i++) {
      File temp=new File(f,files[i]);
      if (temp.isDirectory()) {
        fol_len+=getFileLength(temp);
      }
 else {
        fol_len+=(temp.length());
      }
    }
  }
 else {
    return (f.length());
  }
  return fol_len;
}
