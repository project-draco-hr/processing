{
  available=true;
  bufWidth=w;
  bufHeight=h;
  bufSize=w * h;
  natBuffer=buffer;
  if (playing) {
    if (pipelineEventMethod != null) {
      try {
        pipelineEventMethod.invoke(eventHandler,new Object[]{this});
      }
 catch (      Exception e) {
        System.err.println("error, disabling movieEvent() for " + pipeline);
        e.printStackTrace();
        pipelineEventMethod=null;
      }
    }
  }
}
