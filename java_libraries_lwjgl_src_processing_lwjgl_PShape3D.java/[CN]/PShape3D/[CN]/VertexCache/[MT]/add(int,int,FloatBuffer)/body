{
  if (size == 0) {
    offset=dataOffset;
  }
  int oldSize=floatData.capacity() / ncoords;
  if (size + dataSize >= oldSize) {
    int newSize=expandSize(oldSize,size + dataSize);
    expand(newSize);
  }
  floatData.position(ncoords * size);
  newData.position(0);
  floatData.put(newData);
  size+=dataSize;
}
