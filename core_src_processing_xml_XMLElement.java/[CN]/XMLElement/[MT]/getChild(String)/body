{
  if (path.indexOf('/') != -1) {
    return getChildRecursive(PApplet.split(path,'/'),0);
  }
  int childCount=getChildCount();
  for (int i=0; i < childCount; i++) {
    XMLElement kid=getChild(i);
    String kidName=kid.getName();
    if (kidName != null && kidName.equals(path)) {
      return kid;
    }
  }
  return null;
}
