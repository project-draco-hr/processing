{
  release();
  context=pgl.getCurrentContext();
  if (screenFb) {
    glFboID=0;
  }
 else {
    glFboID=pg.createFrameBufferObject(context.code());
  }
  if (multisample) {
    createColorBufferMultisample();
  }
  if (packedDepthStencil) {
    createPackedDepthStencilBuffer();
  }
 else {
    if (0 < depthBits) {
      createDepthBuffer();
    }
    if (0 < stencilBits) {
      createStencilBuffer();
    }
  }
}
