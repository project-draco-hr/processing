{
  PGraphics buf=createGraphics(30,255);
  buf.beginDraw();
  buf.loadPixels();
  int index=0;
  for (int j=0; j < 255; j++) {
    for (int i=0; i < 30; i++) {
      if (colorBox.isBW) {
        buf.pixels[index++]=color(255 - j);
      }
 else {
        buf.pixels[index++]=color(255 - j,255,255);
      }
    }
  }
  buf.updatePixels();
  buf.endDraw();
  backImg=buf.get();
}
