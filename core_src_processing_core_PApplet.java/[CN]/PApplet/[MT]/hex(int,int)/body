{
  String stuff=Integer.toHexString(what).toUpperCase();
  if (digits > 8) {
    digits=8;
  }
  int length=stuff.length();
  if (length > digits) {
    return stuff.substring(length - digits);
  }
 else   if (length < digits) {
    return "00000000".substring(8 - (digits - length)) + stuff;
  }
  return stuff;
}
