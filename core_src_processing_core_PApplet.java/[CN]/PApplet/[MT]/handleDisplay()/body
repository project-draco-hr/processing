{
  if (PApplet.THREAD_DEBUG)   println(Thread.currentThread().getName() + " handleDisplay()");
  if (looping || redraw) {
    if (THREAD_DEBUG)     println(Thread.currentThread().getName() + " 1a beginDraw");
    g.beginDraw();
    if (THREAD_DEBUG)     println(Thread.currentThread().getName() + " 1b draw");
    if (frameCount == 0) {
      try {
        setup();
      }
 catch (      RuntimeException e) {
        String msg=e.getMessage();
        if ((msg != null) && (e.getMessage().indexOf(NEW_RENDERER) != -1)) {
          return;
        }
 else {
          throw e;
        }
      }
      this.defaultSize=false;
    }
 else {
      if (frameRateLastMillis != 0) {
        float elapsed=(float)(System.currentTimeMillis() - frameRateLastMillis);
        if (elapsed != 0) {
          frameRate=(frameRate * 0.9f) + ((1.0f / (elapsed / 1000.0f)) * 0.1f);
        }
      }
      frameRateLastMillis=System.currentTimeMillis();
      preMethods.handle();
      pmouseX=dmouseX;
      pmouseY=dmouseY;
      draw();
      dmouseX=mouseX;
      dmouseY=mouseY;
      dequeueMouseEvents();
      dequeueKeyEvents();
      if (THREAD_DEBUG)       println(Thread.currentThread().getName() + " 2b endDraw");
      drawMethods.handle();
      redraw=false;
    }
    g.endDraw();
    frameCount++;
    if (THREAD_DEBUG)     println(Thread.currentThread().getName() + "   3a calling repaint() " + frameCount);
    repaint();
    if (THREAD_DEBUG)     println(Thread.currentThread().getName() + "   3b calling Toolkit.sync " + frameCount);
    getToolkit().sync();
    if (THREAD_DEBUG)     println(Thread.currentThread().getName() + "   3c done " + frameCount);
    postMethods.handle();
  }
}
