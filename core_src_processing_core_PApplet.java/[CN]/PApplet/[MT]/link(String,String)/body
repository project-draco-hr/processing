{
  if (online) {
    try {
      if (target == null) {
        getAppletContext().showDocument(new URL(url));
      }
 else {
        getAppletContext().showDocument(new URL(url),target);
      }
    }
 catch (    Exception e) {
      e.printStackTrace();
      throw new RuntimeException("Could not open " + url);
    }
  }
 else {
    try {
      if (platform == WINDOWS) {
        url=url.replaceAll("&","^&");
        Runtime.getRuntime().exec("cmd /c start " + url);
      }
 else       if (platform == MACOSX) {
        try {
          Class<?> eieio=Class.forName("com.apple.eio.FileManager");
          Method openMethod=eieio.getMethod("openURL",new Class[]{String.class});
          openMethod.invoke(null,new Object[]{url});
        }
 catch (        Exception e) {
          e.printStackTrace();
        }
      }
 else {
        open(url);
      }
    }
 catch (    IOException e) {
      e.printStackTrace();
      throw new RuntimeException("Could not open " + url);
    }
  }
}
