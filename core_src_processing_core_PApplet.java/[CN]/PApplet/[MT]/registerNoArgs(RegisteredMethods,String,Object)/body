{
  Class<?> c=o.getClass();
  try {
    Method method=c.getMethod(name,new Class[]{});
    meth.add(o,method);
  }
 catch (  NoSuchMethodException nsme) {
    die("There is no " + name + "() method in the class "+ o.getClass().getName());
  }
catch (  Exception e) {
    die("Could not register " + name + " + () for "+ o,e);
  }
}
