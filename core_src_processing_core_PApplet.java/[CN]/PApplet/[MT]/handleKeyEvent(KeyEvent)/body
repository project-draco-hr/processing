{
  keyEvent=event;
  key=event.getKeyChar();
  keyCode=event.getKeyCode();
  keyEventMethods.handle(new Object[]{event});
switch (event.getID()) {
case KeyEvent.KEY_PRESSED:
    keyPressed=true;
  keyPressed();
break;
case KeyEvent.KEY_RELEASED:
keyPressed=false;
keyReleased();
break;
case KeyEvent.KEY_TYPED:
keyTyped();
break;
}
if ((event.getID() == KeyEvent.KEY_PRESSED) && (key == KeyEvent.VK_ESCAPE)) {
exit();
}
}
