{
  if (g == null) {
    if (v1 > 255)     v1=255;
 else     if (v1 < 0)     v1=0;
    if (v2 > 255)     v2=255;
 else     if (v2 < 0)     v2=0;
    if (v3 > 255)     v3=255;
 else     if (v3 < 0)     v3=0;
    return 0xff000000 | ((int)v1 << 16) | ((int)v2 << 8)| (int)v3;
  }
  return g.color(v1,v2,v3);
}
