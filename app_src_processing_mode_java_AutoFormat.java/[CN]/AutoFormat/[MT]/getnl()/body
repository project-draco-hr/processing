{
  final int savedTabs=tabs;
  char c=peek();
  while (!EOF && (c == '\t' || c == ' ')) {
    buf.append(next());
    c=peek();
  }
  if (c == '/') {
    buf.append(next());
    c=peek();
    if (c == '*') {
      buf.append(next());
      comment();
    }
 else     if (c == '/') {
      buf.append(next());
      handleSingleLineComment();
      return true;
    }
  }
  c=peek();
  if (c == '\n') {
    next();
    lineNumber++;
    tabs=savedTabs;
    return true;
  }
  return false;
}
