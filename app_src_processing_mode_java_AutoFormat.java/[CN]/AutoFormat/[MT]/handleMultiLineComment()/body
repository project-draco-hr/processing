{
  final boolean saved_s_flag=s_flag;
  char ch;
  buf.append(ch=nextChar());
  while (!EOF) {
    buf.append(ch=nextChar());
    while (ch != '/' && !EOF) {
      if (ch == '\n') {
        writeIndentedComment();
        s_flag=true;
      }
      buf.append(ch=nextChar());
    }
    if (buf.length() >= 2 && buf.charAt(buf.length() - 2) == '*') {
      jdoc_flag=false;
      break;
    }
  }
  writeIndentedComment();
  s_flag=saved_s_flag;
  jdoc_flag=false;
  return;
}
