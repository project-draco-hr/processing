{
  float valBuffer[]=new float[4 * width * height];
  for (int j=0; j < height; j++)   for (int i=0; i < width; i++) {
    valBuffer[i * 4 + j * width * 4]=r;
    valBuffer[i * 4 + j * width * 4 + 1]=g;
    valBuffer[i * 4 + j * width * 4 + 2]=b;
    valBuffer[i * 4 + j * width * 4 + 3]=a;
  }
  putBuffer(valBuffer);
}
