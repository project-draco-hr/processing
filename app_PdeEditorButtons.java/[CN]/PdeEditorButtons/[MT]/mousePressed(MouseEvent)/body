{
  int x=e.getX();
  int y=e.getY();
  int sel=findSelection(x,y);
  if (sel == -1)   return;
  currentRollover=-1;
  currentSelection=sel;
  if (!(disableRun && ((sel == RUN) || (sel == STOP)))) {
    setState(sel,ACTIVE,true);
  }
  if (currentSelection == OPEN) {
    if (popup == null) {
      popup=editor.sketchbook.getPopupMenu();
      add(popup);
    }
    popup.show(this,x,y);
  }
}
