{
  int sel=findSelection(x,y);
  if (sel == -1)   return false;
  currentRollover=-1;
  currentSelection=sel;
  setState(sel,ACTIVE,true);
  if (currentSelection == OPEN) {
    if (popup == null) {
      popup=new PopupMenu();
      add(popup);
    }
    editor.base.rebuildSketchbookMenu(popup);
    popup.show(this,x,y);
  }
  return true;
}
