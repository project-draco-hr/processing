{
  PGraphics buf=createGraphics(255,255);
  buf.colorMode(HSB,255,255,255);
  buf.beginDraw();
  buf.loadPixels();
  int index=0;
  for (int j=0; j < 255; j++) {
    for (int i=0; i < 255; i++) {
      buf.pixels[index++]=color(hue,i,255 - j);
    }
  }
  buf.updatePixels();
  buf.endDraw();
  backImg=buf.get();
}
