{
  addMouseListener(new MouseAdapter(){
    public void mousePressed(    MouseEvent e){
      int x=e.getX();
      for (      Tab tab : tabs) {
        if (tab.contains(x)) {
          cardLayout.show(cardPanel,tab.name);
          repaint();
        }
      }
      if (x > updateLeft) {
        ContributionManager.openUpdates();
      }
    }
  }
);
}
