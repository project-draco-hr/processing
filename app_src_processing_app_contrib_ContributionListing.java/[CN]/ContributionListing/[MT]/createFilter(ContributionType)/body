{
  if (type == null) {
    return new Filter(){
      public boolean matches(      Contribution contrib){
        if (contrib instanceof LocalContribution) {
          return ContributionListing.getInstance().hasUpdates(contrib);
        }
        return false;
      }
    }
;
  }
 else {
    return new Filter(){
      public boolean matches(      Contribution contrib){
        return contrib.getType() == type;
      }
    }
;
  }
}
