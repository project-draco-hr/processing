{
  float neighbordist=25.0f;
  PVector sum=new PVector(0,0);
  int count=0;
  for (int i=0; i < boids.size(); i++) {
    Boid other=(Boid)boids.get(i);
    float d=loc.dist(other.loc);
    if ((d > 0) && (d < neighbordist)) {
      sum.add(other.loc);
      count++;
    }
  }
  if (count > 0) {
    sum.div((float)count);
    return steer(sum,false);
  }
  return sum;
}
