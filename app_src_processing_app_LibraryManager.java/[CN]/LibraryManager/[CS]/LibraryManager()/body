{
  dialog=new JFrame("Library Manager");
  dialog.addMouseListener(new MouseAdapter(){
    public void mouseReleased(    MouseEvent e){
      System.out.println("It was released");
    }
  }
);
  Base.setIcon(dialog);
  if (USE_SIMPLE) {
    createSimpleUiComponents();
  }
 else {
    createComplexUiComponents();
  }
  registerDisposeListeners();
  dialog.pack();
  Dimension screen=Toolkit.getDefaultToolkit().getScreenSize();
  dialog.setLocation((screen.width - dialog.getWidth()) / 2,(screen.height - dialog.getHeight()) / 2);
  if (!USE_SIMPLE) {
    libraryListPane.grabFocus();
  }
}
