{
  if (-1 < loc) {
    copyToFloatBuffer(mat);
    if (mat.length == 4) {
      pgl.uniformMatrix2fv(loc,1,false,floatBuffer);
    }
 else     if (mat.length == 9) {
      pgl.uniformMatrix3fv(loc,1,false,floatBuffer);
    }
 else     if (mat.length == 16) {
      pgl.uniformMatrix4fv(loc,1,false,floatBuffer);
    }
  }
}
