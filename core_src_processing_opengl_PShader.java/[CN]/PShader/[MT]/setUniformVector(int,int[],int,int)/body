{
  if (-1 < loc) {
    updateIntBuffer(vec);
    if (ncoords == 1) {
      pgl.uniform1iv(loc,length,intBuffer);
    }
 else     if (ncoords == 2) {
      pgl.uniform2iv(loc,length,intBuffer);
    }
 else     if (ncoords == 3) {
      pgl.uniform3iv(loc,length,intBuffer);
    }
 else     if (ncoords == 4) {
      pgl.uniform3iv(loc,length,intBuffer);
    }
  }
}
