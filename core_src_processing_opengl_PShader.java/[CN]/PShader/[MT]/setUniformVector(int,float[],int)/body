{
  if (-1 < loc) {
    if (ncoords == 1) {
      pgl.glUniform1fv(loc,vec.length,vec,0);
    }
 else     if (ncoords == 2) {
      pgl.glUniform2fv(loc,vec.length / 2,vec,0);
    }
 else     if (ncoords == 3) {
      pgl.glUniform3fv(loc,vec.length / 3,vec,0);
    }
 else     if (ncoords == 4) {
      pgl.glUniform4fv(loc,vec.length / 4,vec,0);
    }
  }
}
