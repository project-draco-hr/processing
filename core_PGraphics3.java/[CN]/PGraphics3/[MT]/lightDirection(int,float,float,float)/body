{
  lightsNX[num]=modelviewInv.m00 * x + modelviewInv.m10 * y + modelviewInv.m20 * z + modelviewInv.m30;
  lightsNY[num]=modelviewInv.m01 * x + modelviewInv.m11 * y + modelviewInv.m21 * z + modelviewInv.m31;
  lightsNZ[num]=modelviewInv.m02 * x + modelviewInv.m12 * y + modelviewInv.m22 * z + modelviewInv.m32;
  float norm=mag(lightsNX[num],lightsNY[num],lightsNZ[num]);
  if (norm == 0 || norm == 1)   return;
  lightsNX[num]/=norm;
  lightsNY[num]/=norm;
  lightsNZ[num]/=norm;
}
