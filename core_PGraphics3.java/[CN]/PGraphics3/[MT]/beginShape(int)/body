{
  shape=kind;
  shape_index=shape_index + 1;
  if (shape_index == -1) {
    shape_index=0;
  }
  if (hints[DEPTH_SORT]) {
    vertex_start=vertexCount;
    vertex_end=0;
  }
 else {
    vertexCount=0;
    if (line != null)     line.reset();
    lineCount=0;
    pathCount=0;
    if (triangle != null)     triangle.reset();
    triangleCount=0;
  }
  textureImage=null;
  splineVertexCount=0;
}
