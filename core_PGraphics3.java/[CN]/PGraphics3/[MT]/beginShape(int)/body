{
  shape=kind;
  if (hints[DEPTH_SORT]) {
    vertex_start=vertex_count;
    vertex_end=0;
  }
 else {
    vertex_count=0;
    if (line != null)     line.reset();
    lineCount=0;
    pathCount=0;
    if (triangle != null)     triangle.reset();
    triangleCount=0;
  }
  textureImage=null;
  spline_vertex_index=0;
  spline_vertices_flat=true;
}
