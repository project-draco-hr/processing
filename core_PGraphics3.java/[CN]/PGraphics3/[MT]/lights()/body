{
  int colorModeSaved=colorMode;
  colorMode=RGB;
  lightFalloff(1,0,0);
  lightSpecular(0,0,0);
  ambientLight(colorModeX * 0.23f,colorModeY * 0.23f,colorModeZ * 0.23f);
  directionalLight(colorModeX * 0.31f,colorModeY * 0.31f,colorModeZ * 0.31f,0,0,-1);
  colorMode=colorModeSaved;
  lightingDependsOnVertexPosition=false;
}
