{
  normalX=nx;
  normalY=ny;
  normalZ=nz;
  if (shape != 0) {
    if (normalCount == 0) {
      for (int i=vertex_start; i < vertexCount; i++) {
        vertices[i][NX]=normalX;
        vertices[i][NY]=normalY;
        vertices[i][NZ]=normalZ;
      }
    }
    normalCount++;
    if (normalCount == 1) {
      normalMode=MANUAL_SHAPE_NORMAL;
    }
 else {
      normalMode=MANUAL_VERTEX_NORMAL;
    }
  }
}
