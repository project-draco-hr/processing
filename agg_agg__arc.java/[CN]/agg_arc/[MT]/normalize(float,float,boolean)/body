{
  float ra=(Math.abs(m_rx) + Math.abs(m_ry)) / 2;
  m_da=(float)Math.acos(ra / (ra + 0.125f / m_scale)) * 2;
  if (ccw) {
    while (a2 < a1)     a2+=PConstants.PI * 2.0f;
  }
 else {
    while (a1 < a2)     a1+=PConstants.PI * 2.0f;
    m_da=-m_da;
  }
  m_ccw=ccw;
  m_start=a1;
  m_end=a2;
  m_initialized=true;
}
