{
  try {
    String pdePath=sketchbook.handleNew(noPrompt,handleNewShift,handleNewLibrary);
    if (pdePath != null)     handleOpen2(pdePath);
  }
 catch (  IOException e) {
    Base.showError("Problem creating a new sketch","An error occurred while creating\n" + "a new sketch. Processing must now quit.",e);
  }
  buttons.clear();
}
