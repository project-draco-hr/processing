{
  background(0);
  lights();
  if (mousePressed) {
    float fov=PI / 3.0f;
    float cameraZ=(height / 2.0f) / tan(PI * fov / 360.0f);
    perspective(fov,PApplet.parseFloat(width) / PApplet.parseFloat(height),cameraZ / 2.0f,cameraZ * 2.0f);
  }
 else {
    ortho(-width / 2,width / 2,-height / 2,height / 2,-10,10);
  }
  translate(width / 2,height / 2,0);
  rotateX(-PI / 6);
  rotateY(PI / 3);
  box(160);
}
