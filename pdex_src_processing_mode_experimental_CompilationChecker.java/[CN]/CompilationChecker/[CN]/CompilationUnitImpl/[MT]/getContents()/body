{
  char[] contents=null;
  try {
    Document doc=new Document();
    if (readFromFile)     doc.set(readFile());
 else     doc.set(sourceText);
    String sourceCode=doc.get();
    if (sourceCode != null)     contents=sourceCode.toCharArray();
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  return contents;
}
