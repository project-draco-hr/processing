{
  release();
  context=pgl.getCurrentContext();
  if (screenFb) {
    glFbo=0;
  }
 else {
    glFbo=pg.createFrameBufferObject(context);
    if (multisample) {
      createColorBufferMultisample();
    }
    if (packedDepthStencil) {
      createPackedDepthStencilBuffer();
    }
 else {
      if (0 < depthBits) {
        createDepthBuffer();
      }
      if (0 < stencilBits) {
        createStencilBuffer();
      }
    }
  }
}
