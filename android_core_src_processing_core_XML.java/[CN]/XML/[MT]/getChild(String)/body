{
  if (name.indexOf('/') != -1) {
    return getChildRecursive(PApplet.split(name,'/'),0);
  }
  int childCount=getChildCount();
  for (int i=0; i < childCount; i++) {
    XML kid=getChild(i);
    String kidName=kid.getName();
    if (kidName != null && kidName.equals(name)) {
      return kid;
    }
  }
  return null;
}
