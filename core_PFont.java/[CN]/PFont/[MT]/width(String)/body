{
  int length=str.length();
  if (length > widthBuffer.length) {
    widthBuffer=new char[length + 10];
  }
  str.getChars(0,length,widthBuffer,0);
  float wide=0;
  int index=0;
  int start=0;
  while (index < length) {
    if (widthBuffer[index] == '\n') {
      wide=Math.max(wide,calcWidth(widthBuffer,start,index));
      start=index + 1;
    }
    index++;
  }
  if (start < length) {
    wide=Math.max(wide,calcWidth(widthBuffer,start,index));
  }
  return wide;
}
