{
  int length=str.length();
  if (length > textBuffer.length) {
    textBuffer=new char[length + 10];
  }
  str.getChars(0,length,textBuffer,0);
  int start=0;
  int index=0;
  while (index < length) {
    if (textBuffer[index] == '\n') {
      textLine(start,index,x,y,z,parent);
      start=index + 1;
      y+=parent.textLeading;
    }
    index++;
  }
  if (start < length) {
    textLine(start,index,x,y,z,parent);
  }
}
