    mat[10]=m22;
    mat[11]=m32;
    mat[12]=m03;
    mat[13]=m13;
    mat[14]=m23;
    mat[15]=m33;
    gl.glUniformMatrix4fv(loc,1,false,mat,0);
  }
}
