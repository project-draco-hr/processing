{
  vertexCheck();
  float[] vertex=vertices[vertexCount];
  curveVertexCount=0;
  vertex[X]=x;
  vertex[Y]=y;
  vertex[Z]=0;
  vertex[EDGE]=edge ? 1 : 0;
  if (fill) {
    vertex[R]=fillR;
    vertex[G]=fillG;
    vertex[B]=fillB;
    vertex[A]=fillA;
  }
  if (stroke) {
    vertex[SR]=strokeR;
    vertex[SG]=strokeG;
    vertex[SB]=strokeB;
    vertex[SA]=strokeA;
    vertex[SW]=strokeWeight;
  }
  if (textureImage != null) {
    vertex[U]=textureU;
    vertex[V]=textureV;
  }
  vertexCount++;
}
