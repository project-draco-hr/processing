{
  PImage img=textureImages.get(i);
  if (img == null) {
    throw new RuntimeException("You must first call texture() before " + "using u and v coordinates with vertex()");
  }
  if (textureMode == IMAGE) {
    u/=(float)img.width;
    v/=(float)img.height;
  }
  textureU[i]=u;
  textureV[i]=v;
  if (textureU[i] < 0)   textureU[i]=0;
 else   if (textureU[i] > 1)   textureU[i]=1;
  if (textureV[i] < 0)   textureV[i]=0;
 else   if (textureV[i] > 1)   textureV[i]=1;
}
