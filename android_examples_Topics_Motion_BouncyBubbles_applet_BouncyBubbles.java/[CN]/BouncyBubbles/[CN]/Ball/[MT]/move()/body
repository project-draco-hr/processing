{
  vy+=gravity;
  x+=vx;
  y+=vy;
  if (x + diameter / 2 > width) {
    x=width - diameter / 2;
    vx*=friction;
  }
 else   if (x - diameter / 2 < 0) {
    x=diameter / 2;
    vx*=friction;
  }
  if (y + diameter / 2 > height) {
    y=height - diameter / 2;
    vy*=friction;
  }
 else   if (y - diameter / 2 < 0) {
    y=diameter / 2;
    vy*=friction;
  }
}
