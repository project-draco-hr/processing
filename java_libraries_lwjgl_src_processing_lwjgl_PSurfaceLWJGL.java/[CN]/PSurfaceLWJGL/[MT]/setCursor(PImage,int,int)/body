{
  BufferedImage jimg=(BufferedImage)image.getNative();
  IntBuffer buf=IntBuffer.wrap(jimg.getRGB(0,0,jimg.getWidth(),jimg.getHeight(),null,0,jimg.getWidth()));
  try {
    currentCursor=new Cursor(jimg.getWidth(),jimg.getHeight(),hotspotX,hotspotY,1,buf,null);
    Mouse.setNativeCursor(currentCursor);
    cursorVisible=true;
  }
 catch (  LWJGLException e) {
    e.printStackTrace();
  }
}
