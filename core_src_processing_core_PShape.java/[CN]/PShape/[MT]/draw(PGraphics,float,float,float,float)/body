{
  if (!visible)   return;
  g.pushMatrix();
  if (drawMode == PConstants.CENTER) {
    g.translate(x - c / 2f,y - d / 2f);
    g.scale(c / width,d / height);
  }
 else   if (drawMode == PConstants.CORNER) {
    g.translate(x,y);
    g.scale(c / width,d / height);
  }
 else   if (drawMode == PConstants.CORNERS) {
    c-=x;
    d-=y;
    g.translate(x,y);
    g.scale(c / width,d / height);
  }
  pre(g);
  drawImpl(g);
  post(g);
  g.popMatrix();
}
