{
  JMenuItem runItem=Toolkit.newJMenuItem(Language.text("toolbar.run"),'R');
  runItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      handleRun();
    }
  }
);
  JMenuItem presentItem=Toolkit.newJMenuItemShift(Language.text("toolbar.present"),'R');
  presentItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      handlePresent();
    }
  }
);
  JMenuItem stopItem=new JMenuItem(Language.text("toolbar.stop"));
  stopItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      if (isDebuggerEnabled()) {
        Logger.getLogger(JavaEditor.class.getName()).log(Level.INFO,"Invoked 'Stop' menu item");
        debugger.stopDebug();
      }
 else {
        handleStop();
      }
    }
  }
);
  JMenuItem tweakItem=Toolkit.newJMenuItemShift(Language.text("menu.sketch.tweak"),'T');
  tweakItem.setSelected(JavaMode.enableTweak);
  tweakItem.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent e){
      JavaMode.enableTweak=true;
      handleRun();
    }
  }
);
  return buildSketchMenu(new JMenuItem[]{runItem,presentItem,tweakItem,stopItem});
}
