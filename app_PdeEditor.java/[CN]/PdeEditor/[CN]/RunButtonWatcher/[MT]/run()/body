{
  while (Thread.currentThread() == thread) {
    if (runtime != null) {
      if (runtime.applet != null) {
        buttons.running(!runtime.applet.finished);
      }
 else       if (runtime.process != null) {
        buttons.running(true);
      }
    }
    try {
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
}
