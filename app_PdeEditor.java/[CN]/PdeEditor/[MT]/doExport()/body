{
  message("Exporting to applet...");
  String s=textarea.getText();
  FileDialog fd=new FileDialog(new Frame(),"Create applet project named...",FileDialog.SAVE);
  String directory=sketchFile.getPath();
  String project=sketchFile.getName();
  fd.setDirectory(directory);
  fd.setFile(project);
  fd.show();
  directory=fd.getDirectory();
  project=fd.getFile();
  if (project == null) {
    message(EMPTY);
    buttons.clear();
    return;
  }
 else   if (project.indexOf(' ') != -1) {
    message("Project name cannot have spaces.");
    buttons.clear();
    return;
  }
  handleExport(new File(directory),project,null);
}
