{
  return world[(x + 1) % sx][y][0] + world[x][(y + 1) % sy][0] + world[(x + sx - 1) % sx][y][0]+ world[x][(y + sy - 1) % sy][0]+ world[(x + 1) % sx][(y + 1) % sy][0]+ world[(x + sx - 1) % sx][(y + 1) % sy][0]+ world[(x + sx - 1) % sx][(y + sy - 1) % sy][0]+ world[(x + 1) % sx][(y + sy - 1) % sy][0];
}
