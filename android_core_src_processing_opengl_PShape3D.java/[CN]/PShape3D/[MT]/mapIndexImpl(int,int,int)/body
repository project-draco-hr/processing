{
  updateTesselation();
  pgl.glBindBuffer(PGL.GL_ELEMENT_ARRAY_BUFFER,id);
  ByteBuffer bb;
  if (root == this) {
    bb=pgl.glMapBuffer(PGL.GL_ELEMENT_ARRAY_BUFFER,PGL.GL_READ_WRITE);
  }
 else {
    bb=pgl.glMapBufferRange(PGL.GL_ELEMENT_ARRAY_BUFFER,offset,count,PGL.GL_READ_WRITE);
  }
  return bb;
}
