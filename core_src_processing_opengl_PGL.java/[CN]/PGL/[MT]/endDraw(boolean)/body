{
  if (fboLayerInUse) {
    bindFramebuffer(FRAMEBUFFER,0);
    clearDepth(1);
    clearColor(0,0,0,0);
    clear(COLOR_BUFFER_BIT | DEPTH_BUFFER_BIT);
    disable(BLEND);
    drawTexture(TEXTURE_2D,glColorTex.get(backTex),fboWidth,fboHeight,0,0,pg.width,pg.height,0,0,pg.width,pg.height);
    int temp=frontTex;
    frontTex=backTex;
    backTex=temp;
  }
  flush();
}
