{
  if (USE_JOGL_FBOLAYER) {
    if (capabilities.isFBO()) {
      return GL.GL_COLOR_ATTACHMENT0;
    }
 else     if (capabilities.getDoubleBuffered()) {
      return GL.GL_BACK;
    }
 else {
      return GL.GL_FRONT;
    }
  }
 else {
    if (fboLayerInUse) {
      return COLOR_ATTACHMENT0;
    }
 else {
      return BACK;
    }
  }
}
