{
  int peModifiers=nativeEvent.getModifiers() & (InputEvent.SHIFT_MASK | InputEvent.CTRL_MASK | InputEvent.META_MASK| InputEvent.ALT_MASK);
  KeyEvent ke=new KeyEvent(nativeEvent,nativeEvent.getWhen(),peAction,peModifiers,nativeEvent.getKeyChar(),nativeEvent.getKeyCode());
  pg.parent.postEvent(ke);
}
