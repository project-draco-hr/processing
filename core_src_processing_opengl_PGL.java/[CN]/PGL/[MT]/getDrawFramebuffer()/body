{
  if (USE_JOGL_FBOLAYER) {
    if (capabilities.isFBO()) {
      return context.getDefaultDrawFramebuffer();
    }
 else {
      return 0;
    }
  }
 else {
    if (fboLayerInUse) {
      if (1 < numSamples) {
        return glMultiFbo.get(0);
      }
 else {
        return glColorFbo.get(0);
      }
    }
 else {
      return 0;
    }
  }
}
