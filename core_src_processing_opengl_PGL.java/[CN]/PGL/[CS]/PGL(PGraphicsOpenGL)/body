    glMultiStencil=allocateIntBuffer(1);
    fboLayerCreated=false;
    fboLayerInUse=false;
    firstFrame=false;
  }
  byteBuffer=allocateByteBuffer(1);
  intBuffer=allocateIntBuffer(1);
  viewBuffer=allocateIntBuffer(4);
}
