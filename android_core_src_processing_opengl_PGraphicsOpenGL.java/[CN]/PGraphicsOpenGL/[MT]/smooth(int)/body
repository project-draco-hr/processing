{
  if (smoothDisabled)   return;
  smooth=true;
  if (maxSamples < level) {
    if (0 < maxSamples) {
      PGraphics.showWarning("Smooth level " + level + " is not available. Using "+ maxSamples+ " instead.");
    }
 else {
      PGraphics.showWarning("Smooth is not available.");
    }
    level=maxSamples;
  }
  if (quality != level) {
    smoothCallCount++;
    if (parent.frameCount - lastSmoothCall < 30 && 5 < smoothCallCount) {
      smoothDisabled=true;
      PGraphics.showWarning("The smooth/noSmooth functions are being " + "called too often.\n" + "This results in screen flickering, so they "+ "will be disabled\n"+ "for the rest of the sketch's execution.");
    }
    lastSmoothCall=parent.frameCount;
    quality=level;
    if (quality == 1) {
      quality=0;
    }
    pgl.initialized=false;
  }
}
