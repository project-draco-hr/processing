{
  smooth=true;
  if (maxSamples < level) {
    PGraphics.showWarning("Smooth level " + level + " is not supported by the hardware. Using "+ maxSamples+ " instead.");
    level=maxSamples;
  }
  if (quality != level) {
    quality=level;
    if (quality == 1) {
      quality=0;
    }
    pgl.initialized=false;
  }
}
