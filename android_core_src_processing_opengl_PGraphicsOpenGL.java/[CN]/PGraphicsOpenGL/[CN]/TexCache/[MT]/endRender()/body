{
  if (haveTexture) {
    for (int i=0; i < size; i++) {
      PImage img=textures[i];
      if (img != null) {
        PTexture tex=pg.getTexture(img);
        if (tex != null) {
          tex.unbind();
        }
      }
    }
    for (int i=0; i < size; i++) {
      PImage img=textures[i];
      if (img != null) {
        PTexture tex=pg.getTexture(img);
        if (tex != null) {
          pgl.disableTexturing(tex.glTarget);
        }
      }
    }
  }
}
