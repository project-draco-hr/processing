{
  if (first < last) {
    int index;
    for (int i=first; i <= last; i++) {
      index=4 * i;
      float x=pointVertices[index++];
      float y=pointVertices[index];
      index=4 * i;
      pointVertices[index++]=x * tr.m00 + y * tr.m01 + tr.m02;
      pointVertices[index]=x * tr.m10 + y * tr.m11 + tr.m12;
    }
  }
}
