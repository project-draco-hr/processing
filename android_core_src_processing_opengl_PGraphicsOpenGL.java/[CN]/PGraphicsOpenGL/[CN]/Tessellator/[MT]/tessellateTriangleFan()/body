{
  int nInVert=in.lastVertex - in.firstVertex + 1;
  if (fill && 3 <= nInVert) {
    int nInInd=3 * (nInVert - 2);
    setRawSize(nInInd);
    int idx=0;
    for (int i=in.firstVertex + 1; i < in.lastVertex; i++) {
      rawIndices[idx++]=in.firstVertex;
      rawIndices[idx++]=i;
      rawIndices[idx++]=i + 1;
    }
    partitionRawIndices();
  }
  tessellateEdges();
}
