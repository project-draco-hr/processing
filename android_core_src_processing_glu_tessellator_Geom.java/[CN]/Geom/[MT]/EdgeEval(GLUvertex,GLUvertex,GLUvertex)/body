{
  double gapL, gapR;
  assert(VertLeq(u,v) && VertLeq(v,w));
  gapL=v.s - u.s;
  gapR=w.s - v.s;
  if (gapL + gapR > 0) {
    if (gapL < gapR) {
      return (v.t - u.t) + (u.t - w.t) * (gapL / (gapL + gapR));
    }
 else {
      return (v.t - w.t) + (w.t - u.t) * (gapR / (gapL + gapR));
    }
  }
  return 0;
}
