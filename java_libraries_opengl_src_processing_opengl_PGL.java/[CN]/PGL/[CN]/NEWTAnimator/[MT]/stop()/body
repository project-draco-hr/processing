{
  if (timer == null) {
    return false;
  }
  stateSync.lock();
  try {
    shouldRun=false;
    if (null != task) {
      task.cancel();
      task=null;
    }
    if (null != timer) {
      timer.cancel();
      timer=null;
    }
    animThread=null;
    try {
      Thread.sleep(20);
    }
 catch (    InterruptedException e) {
    }
  }
  finally {
    stateSync.unlock();
  }
  return true;
}
