{
  boolean outdated=false;
  for (int i=0; i < textures.length; i++) {
    if (textures[i].contextIsOutdated()) {
      outdated=true;
    }
  }
  if (outdated) {
    for (int i=0; i < textures.length; i++) {
      pg.removeTextureObject(textures[i].glName,textures[i].context);
      textures[i].glName=0;
    }
  }
  return outdated;
}
