{
  String str=get(which);
  if (str == null)   return otherwise;
  StringTokenizer st=new StringTokenizer(str,",");
  String fontname=st.nextToken();
  String fontstyle=st.nextToken();
  return new Font(fontname,((fontstyle.indexOf("bold") != -1) ? Font.BOLD : 0) | ((fontstyle.indexOf("italic") != -1) ? Font.ITALIC : 0),Integer.parseInt(st.nextToken()));
}
