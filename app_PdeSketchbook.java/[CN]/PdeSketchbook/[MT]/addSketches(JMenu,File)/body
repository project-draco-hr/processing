{
  if (!folder.isDirectory())   return false;
  String list[]=folder.list();
  SketchbookMenuListener listener=new SketchbookMenuListener(folder.getAbsolutePath());
  boolean ifound=false;
  for (int i=0; i < list.length; i++) {
    if (list[i].equals(".") || list[i].equals("..") || list[i].equals("CVS"))     continue;
    File subfolder=new File(folder,list[i]);
    if (new File(subfolder,list[i] + ".pde").exists()) {
      JMenuItem item=new JMenuItem(list[i]);
      item.addActionListener(listener);
      menu.add(item);
      ifound=true;
    }
 else {
      JMenu submenu=new JMenu(list[i]);
      boolean found=addSketches(submenu,subfolder);
      if (found) {
        menu.add(submenu);
        ifound=true;
      }
    }
  }
  return ifound;
}
