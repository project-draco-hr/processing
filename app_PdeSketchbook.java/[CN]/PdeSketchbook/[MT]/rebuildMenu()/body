{
  if (menu == null) {
    menu=new JMenu("Open");
  }
 else {
    menu.removeAll();
  }
  try {
    sketchbookFolder=new File(PdePreferences.get("sketchbook.path"));
    sketchbookPath=sketchbookFolder.getAbsolutePath();
    if (!sketchbookFolder.exists()) {
      System.err.println("sketchbook folder doesn't exist, " + "making a new one");
      sketchbookFolder.mkdirs();
    }
    addSketches(sketchbookFolder);
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
  return menu;
}
