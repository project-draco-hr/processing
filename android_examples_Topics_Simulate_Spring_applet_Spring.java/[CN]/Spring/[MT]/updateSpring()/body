{
  if (!move) {
    f=-K * (ps - R);
    as=f / M;
    vs=D * (vs + as);
    ps=ps + vs;
  }
  if (abs(vs) < 0.1f) {
    vs=0.0f;
  }
  if (mouseX > left && mouseX < right && mouseY > ps && mouseY < ps + s_height) {
    over=true;
  }
 else {
    over=false;
  }
  if (move) {
    ps=mouseY - s_height / 2;
    if (ps < min) {
      ps=min;
    }
    if (ps > max) {
      ps=max;
    }
  }
}
