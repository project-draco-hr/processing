{
  try {
    ClassLoader classloader=getClass().getClassLoader();
    java.net.URL url=classloader.getResource(imageName);
    if (url != null) {
      ImageIcon icon=new ImageIcon(url);
      return icon;
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  throw new IllegalArgumentException("Unable to load image: " + imageName);
}
