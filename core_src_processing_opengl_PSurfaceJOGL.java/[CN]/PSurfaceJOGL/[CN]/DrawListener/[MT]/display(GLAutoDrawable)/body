{
  pgl.getGL(drawable);
  int pframeCount=sketch.frameCount;
  sketch.handleDraw();
  if (pframeCount == sketch.frameCount) {
    pgl.beginDraw(false);
    pgl.endDraw(false,sketch.sketchWindowColor());
  }
  if (sketch.frameCount == 1) {
    requestFocus();
  }
  if (sketch.exitCalled()) {
    animator.stop();
    sketch.dispose();
    sketch.exitActual();
  }
}
