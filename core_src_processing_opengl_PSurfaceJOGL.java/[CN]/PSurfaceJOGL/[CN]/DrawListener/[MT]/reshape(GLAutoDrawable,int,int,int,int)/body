{
  final float[] valReqSurfacePixelScale=window.getRequestedSurfaceScale(new float[2]);
  final float[] hasSurfacePixelScale=window.getCurrentSurfaceScale(new float[2]);
  final float[] nativeSurfacePixelScale=window.getMaximumSurfaceScale(new float[2]);
  System.err.println("[set PixelScale post]: " + valReqSurfacePixelScale[0] + "x"+ valReqSurfacePixelScale[1]+ " (val) -> "+ hasSurfacePixelScale[0]+ "x"+ hasSurfacePixelScale[1]+ " (has), "+ nativeSurfacePixelScale[0]+ "x"+ nativeSurfacePixelScale[1]+ " (native)");
  System.out.println("reshape: " + w + ", "+ h);
  pgl.getGL(drawable);
  setSize((int)(w / hasSurfacePixelScale[0]),(int)(h / hasSurfacePixelScale[1]));
}
