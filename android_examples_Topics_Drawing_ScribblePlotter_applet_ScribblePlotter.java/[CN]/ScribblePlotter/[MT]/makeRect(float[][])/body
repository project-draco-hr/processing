{
  stroke(255);
  smooth();
  int steps=100;
  float scribVal=3.0f;
  for (int i=0; i < pts[0].length; i++) {
    strokeWeight(5);
    point(pts[0][i],pts[1][i]);
    strokeWeight(.5f);
    if (i > 0) {
      scribble(pts[0][i],pts[1][i],pts[0][i - 1],pts[1][i - 1],steps,scribVal,SCRIBBLE);
    }
    if (i == pts[0].length - 1) {
      scribble(pts[0][i],pts[1][i],pts[0][0],pts[1][0],steps,scribVal * 2,HATCHING);
    }
  }
}
