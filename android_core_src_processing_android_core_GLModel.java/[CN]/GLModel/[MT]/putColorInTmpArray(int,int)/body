{
  int ir, ig, ib, ia;
  if (tmpColorArray == null) {
    tmpColorArray=new float[4 * size];
    colors.get(tmpColorArray);
    colors.rewind();
  }
  ia=(color >> 24) & 0xff;
  ir=(color >> 16) & 0xff;
  ig=(color >> 8) & 0xff;
  ib=color & 0xff;
  tmpColorArray[4 * i + 0]=ir / 255.0f;
  tmpColorArray[4 * i + 1]=ig / 255.0f;
  tmpColorArray[4 * i + 2]=ib / 255.0f;
  tmpColorArray[4 * i + 3]=ia / 255.0f;
}
