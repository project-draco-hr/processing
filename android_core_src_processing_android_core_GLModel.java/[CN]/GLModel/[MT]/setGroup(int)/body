{
  if (updateElement != VERTICES) {
    throw new RuntimeException("GLModel: setGroup() with group number as only argument must be used while updating vertices");
  }
  if (firstSetGroup) {
    firstSetGroup=false;
    deleteGroups();
  }
  if (creatingGroup) {
    addGroup(grIdx0,grIdx1,null);
  }
  creatingGroup=true;
  grIdx0=grIdx1=-1;
}
