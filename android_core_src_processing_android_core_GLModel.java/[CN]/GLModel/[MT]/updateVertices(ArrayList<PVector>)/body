{
  if (vertArrayList.size() != size) {
    System.err.println("Wrong number of vertices in the array list.");
    return;
  }
  float p[]=new float[3 * size];
  for (int i=0; i < vertArrayList.size(); i++) {
    PVector point=(PVector)vertArrayList.get(i);
    p[3 * i + 0]=point.x;
    p[3 * i + 1]=point.y;
    p[3 * i + 2]=point.z;
  }
  updateVertices(p);
}
