{
  int idx0, idx1;
  idx0=0;
  Integer idx;
  groups.clear();
  for (int i=0; i < groupBreaks.size(); i++) {
    idx=(Integer)groupBreaks.get(i);
    idx1=idx.intValue();
    if (idx0 <= idx1) {
      groups.add(new VertexGroup(idx0,idx1,numTextures));
      idx0=idx1 + 1;
    }
  }
  idx1=numVertices - 1;
  if (idx0 <= idx1) {
    groups.add(new VertexGroup(idx0,idx1,numTextures));
  }
}
