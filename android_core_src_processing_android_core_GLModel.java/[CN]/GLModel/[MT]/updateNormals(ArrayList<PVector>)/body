{
  if (normArrayList.size() != size) {
    System.err.println("Wrong number of normals in the array list.");
    return;
  }
  float p[]=new float[3 * size];
  for (int i=0; i < normArrayList.size(); i++) {
    PVector point=(PVector)normArrayList.get(i);
    p[3 * i + 0]=point.x;
    p[3 * i + 1]=point.y;
    p[3 * i + 2]=point.z;
  }
  updateNormals(p);
}
