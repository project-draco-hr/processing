{
  if (start.length == stop.length) {
    int defMode=POINTS;
    if (groups != null)     defMode=groups[0].drawMode;
    groups=new VertexGroup[start.length];
    for (int i=0; i < start.length; i++) {
      groups[i].start=start[i];
      groups[i].stop=stop[i];
      groups[i].drawMode=defMode;
    }
  }
}
