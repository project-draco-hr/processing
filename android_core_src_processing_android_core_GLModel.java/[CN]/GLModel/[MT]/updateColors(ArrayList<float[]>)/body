{
  if (colArrayList.size() != size) {
    System.err.println("Wrong number of colors in the array list.");
    return;
  }
  float p[]=new float[4 * size];
  for (int i=0; i < colArrayList.size(); i++) {
    float[] c=(float[])colArrayList.get(i);
    if (c.length == 4) {
      p[4 * i + 0]=c[0];
      p[4 * i + 1]=c[1];
      p[4 * i + 2]=c[2];
      p[4 * i + 3]=c[3];
    }
  }
  updateColors(p);
}
