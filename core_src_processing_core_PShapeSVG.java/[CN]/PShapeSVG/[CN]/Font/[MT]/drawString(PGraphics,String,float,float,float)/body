{
  g.pushMatrix();
  float s=size / face.unitsPerEm;
  g.translate(x,y);
  g.scale(s,-s);
  char[] c=str.toCharArray();
  for (int i=0; i < c.length; i++) {
    FontGlyph fg=unicodeGlyphs.get(new Character(c[i]));
    if (fg != null) {
      fg.draw(g);
      g.translate(fg.horizAdvX,0);
    }
 else {
      System.err.println("'" + c[i] + "' not available.");
    }
  }
  g.popMatrix();
}
