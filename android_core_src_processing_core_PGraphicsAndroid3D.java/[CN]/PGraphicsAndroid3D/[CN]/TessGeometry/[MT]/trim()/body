{
  if (fillVertexCount < fillVertices.length / 3) {
    trimFillVertices();
    trimFillColors();
    trimFillNormals();
    trimFillTexcoords();
    trimFillAmbient();
    trimFillSpecular();
    trimFillEmissive();
    trimFillShininess();
  }
  if (fillIndexCount < fillIndices.length) {
    trimFillIndices();
  }
  if (lineVertexCount < lineVertices.length / 3) {
    trimLineVertices();
    trimLineColors();
    trimLineAttributes();
  }
  if (lineIndexCount < lineIndices.length) {
    trimLineIndices();
  }
  if (pointVertexCount < pointVertices.length / 3) {
    trimPointVertices();
    trimPointColors();
    trimPointAttributes();
  }
  if (pointIndexCount < pointIndices.length) {
    trimPointIndices();
  }
}
