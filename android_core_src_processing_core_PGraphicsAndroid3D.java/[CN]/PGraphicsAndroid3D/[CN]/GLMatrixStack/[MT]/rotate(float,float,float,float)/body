{
  float c=PApplet.cos(angle);
  float s=PApplet.sin(angle);
  float t=1.0f - c;
  mult((t * rx * rx) + c,(t * rx * ry) - (s * rz),(t * rx * rz) + (s * ry),0,(t * rx * ry) + (s * rz),(t * ry * ry) + c,(t * ry * rz) - (s * rx),0,(t * rx * rz) - (s * ry),(t * ry * rz) + (s * rx),(t * rz * rz) + c,0,0,0,0,1);
}
