{
  if (manipulatingCamera) {
    scalingDuringCamManip=true;
  }
  gl.glScalef(x,y,z);
  if (usingGLMatrixStack) {
    if (matrixMode == PROJECTION) {
      projectionStack.scale(x,y,z);
      projectionUpdated=false;
    }
 else {
      modelviewStack.scale(x,y,z);
      modelviewUpdated=false;
    }
  }
}
