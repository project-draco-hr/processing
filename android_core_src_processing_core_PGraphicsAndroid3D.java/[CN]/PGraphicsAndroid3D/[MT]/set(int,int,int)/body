{
  int getset=0;
  if (BIG_ENDIAN) {
    getset=(argb << 8) | 0xff;
  }
 else {
    getset=(argb & 0xff00ff00) | ((argb << 16) & 0xff0000) | ((argb >> 16) & 0xff);
  }
  getsetBuffer.put(0,getset);
  getsetBuffer.rewind();
  copyToTexture(getsetTex,getsetBuffer,0,0,1,1);
  drawTexture(getsetTex,0,0,1,1,x,y,1,1);
}
