{
  Object source=e.getSource();
  if (source == findButton) {
    findNext();
  }
 else   if (source == previousButton) {
    findPrevious();
  }
 else   if (source == replaceFindButton) {
    replaceAndFindNext();
  }
 else   if (source == replaceButton) {
    replace();
  }
 else   if (source == replaceAllButton) {
    replaceAll();
  }
}
