{
  this.addKeyListener(new KeyListener(){
    @Override public void keyTyped(    KeyEvent e){
    }
    @Override public void keyReleased(    KeyEvent e){
      if (Character.isLetterOrDigit(e.getKeyChar()) || e.getKeyChar() == KeyEvent.VK_BACK_SPACE || e.getKeyChar() == KeyEvent.VK_DELETE) {
      }
 else       if (Character.isWhitespace(e.getKeyChar()) || e.getKeyChar() == KeyEvent.VK_ESCAPE) {
        hideSuggestion();
      }
    }
    @Override public void keyPressed(    KeyEvent e){
    }
  }
);
}
