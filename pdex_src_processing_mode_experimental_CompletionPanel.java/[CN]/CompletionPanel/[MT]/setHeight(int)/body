{
  FontMetrics fm=textarea.getFontMetrics(textarea.getFont());
  float h=(fm.getHeight() + (fm.getDescent()) * 0.5f) * (itemCount);
  if (scrollPane.getHorizontalScrollBar().isVisible())   h+=scrollPane.getHorizontalScrollBar().getHeight() + fm.getHeight() + (fm.getDescent() + fm.getAscent()) * 0.8f;
  return Math.min(250,(int)h);
}
