{
  this.textarea=(TextArea)textarea;
  this.insertionPosition=position;
  if (subWord.indexOf('.') != -1)   this.subWord=subWord.substring(subWord.lastIndexOf('.') + 1);
 else   this.subWord=subWord;
  popupMenu=new JPopupMenu();
  popupMenu.removeAll();
  popupMenu.setOpaque(false);
  popupMenu.setBorder(null);
  popupMenu.add(list=createSuggestionList(position,items),BorderLayout.CENTER);
  popupMenu.show(textarea,location.x,textarea.getBaseline(0,0) + location.y);
  this.textarea.errorCheckerService.astGenerator.updateJavaDoc((CompletionCandidate)list.getSelectedValue());
}
