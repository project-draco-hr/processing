{
  int nInVert=in.lastVertex - in.firstVertex + 1;
  if (stroke && 2 <= nInVert) {
    int lineCount=nInVert / 2;
    int nvert=lineCount * 4;
    int nind=lineCount * 2 * 3;
    if (is3D) {
      tessellateLines3D(nvert,nind,lineCount);
    }
 else     if (is2D) {
      beginNoTex();
      tessellateLines2D(nvert,nind,lineCount);
      endNoTex();
    }
  }
}
