{
  firstPointIndex=0;
  if (0 < ioffset) {
    firstPointIndex=ioffset + 1;
  }
  if (0 < voffset) {
    for (int i=0; i < pointIndexCount; i++) {
      pointIndices.position(i);
      pointIndices.put(pointIndices.get(i) + voffset);
    }
  }
  lastPointIndex=firstPointIndex + pointIndexCount - 1;
  return lastPointIndex;
}
