{
  int[] indices=pointIndices[inIdx];
  int pos;
  if (indices.length == 0) {
    indices=new int[1];
    pos=0;
  }
 else {
    int len=indices.length;
    indices=new int[len + 1];
    PApplet.arrayCopy(pointIndices[inIdx],indices,len);
    pos=len;
  }
  indices[pos]=tessIdx;
  pointIndices[inIdx]=indices;
}
