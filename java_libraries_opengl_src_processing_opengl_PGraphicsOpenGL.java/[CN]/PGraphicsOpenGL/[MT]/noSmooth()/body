{
  smooth=false;
  if (1 < antialias) {
    antialias=0;
    if (primarySurface) {
      restartContext();
    }
 else {
      initOffscreen();
    }
  }
  pgl.glDisable(PGL.GL_MULTISAMPLE);
  pgl.glDisable(PGL.GL_POINT_SMOOTH);
  pgl.glDisable(PGL.GL_LINE_SMOOTH);
  pgl.glDisable(PGL.GL_POLYGON_SMOOTH);
}
