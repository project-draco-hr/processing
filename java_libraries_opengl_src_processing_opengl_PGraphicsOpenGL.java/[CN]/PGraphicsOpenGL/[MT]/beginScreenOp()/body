{
  if (!primarySurface) {
    offscreenNotCurrent=offscreenFramebuffer != currentFramebuffer;
    if (offscreenNotCurrent) {
      pushFramebuffer();
      setFramebuffer(offscreenFramebuffer);
      pgl.updateOffscreen(pg.pgl);
    }
  }
 else {
    offscreenNotCurrent=false;
  }
  screenOp=true;
}
