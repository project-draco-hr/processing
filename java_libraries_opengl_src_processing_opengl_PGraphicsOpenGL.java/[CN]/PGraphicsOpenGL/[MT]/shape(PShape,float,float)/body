{
  if (shape.isVisible()) {
    flush();
    if (settingPixels) {
      updatePixels();
    }
    pushMatrix();
    if (shapeMode == CENTER) {
      translate(x - shape.getWidth() / 2,y - shape.getHeight() / 2);
    }
 else     if ((shapeMode == CORNER) || (shapeMode == CORNERS)) {
      translate(x,y);
    }
    shape.draw(this);
    popMatrix();
    pixelsAreDirty=true;
    settingPixels=false;
  }
}
