{
  PTexture tex=(PTexture)img.getCache(renderer);
  if (tex == null) {
    tex=addTexture(img);
  }
 else {
    if (context.hashCode() != tex.context.hashCode()) {
      tex.glID=0;
      tex=addTexture(img);
    }
    if (img.isModified()) {
      if (img.width != tex.width || img.height != tex.height) {
        tex.init(img.width,img.height);
      }
      updateTexture(img,tex);
    }
  }
  return tex;
}
