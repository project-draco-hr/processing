{
  shapeType0=shapeType;
  shape=kind;
  if (shape == LINES) {
    shapeType=LINES;
  }
 else   if (shape == POINTS) {
    shapeType=POINTS;
  }
 else   if (!stroke) {
    shapeType=NON_STROKED_SHAPE;
  }
 else {
    shapeType=STROKED_SHAPE;
  }
  if (flushMode == FLUSH_WHEN_FULL && twoDimensionalDrawing && shapeType != shapeType0) {
    flush();
  }
  in.reset();
  breakShape=false;
  textureImage0=textureImage;
  noTexture();
}
