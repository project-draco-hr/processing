{
  if (recordingShape) {
    System.err.println("OPENGL2: Already recording.");
  }
 else {
    if (USE_GEO_BUFFER) {
      if (geoBuffer != null && 0 < geoBuffer.vertCount) {
        geoBuffer.pre();
        geoBuffer.render();
        geoBuffer.post();
      }
      if (geoBuffer == null)       geoBuffer=new GeometryBuffer();
    }
    recordedShape=shape;
    beginShapeRecorderImpl();
  }
}
