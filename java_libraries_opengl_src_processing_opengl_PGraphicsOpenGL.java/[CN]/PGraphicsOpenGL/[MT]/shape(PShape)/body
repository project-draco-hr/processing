{
  if (shape.isVisible()) {
    flush();
    if (settingPixels) {
      updatePixels();
    }
    if (shapeMode == CENTER) {
      pushMatrix();
      translate(-shape.getWidth() / 2,-shape.getHeight() / 2);
    }
    shape.draw(this);
    if (shapeMode == CENTER) {
      popMatrix();
    }
    pixelsAreDirty=true;
    settingPixels=false;
  }
}
