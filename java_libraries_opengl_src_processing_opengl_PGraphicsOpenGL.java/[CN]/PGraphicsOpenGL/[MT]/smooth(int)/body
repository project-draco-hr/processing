{
  smooth=true;
  if (maxSamples < level) {
    PGraphics.showWarning("Smooth level " + level + " is not supported by the hardware. Using "+ maxSamples+ " instead.");
    level=maxSamples;
  }
  if (antialias != level) {
    antialias=level;
    if (antialias == 1) {
      antialias=0;
    }
    pgl.initialized=false;
  }
  PApplet.println("setting smooth at " + level);
}
