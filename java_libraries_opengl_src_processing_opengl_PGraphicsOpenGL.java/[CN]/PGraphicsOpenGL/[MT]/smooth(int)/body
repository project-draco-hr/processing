{
  smooth=true;
  if (maxSamples < level) {
    PGraphics.showWarning("Smooth level not supported by the video card. Using " + maxSamples + " instead.");
    level=maxSamples;
  }
  if (antialias != level) {
    antialias=level;
    if (antialias == 1) {
      antialias=0;
    }
    pgl.initialized=false;
  }
}
