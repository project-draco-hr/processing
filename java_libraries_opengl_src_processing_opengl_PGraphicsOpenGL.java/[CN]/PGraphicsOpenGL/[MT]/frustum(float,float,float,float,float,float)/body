{
  flush();
  float temp, temp2, temp3, temp4;
  temp=2.0f * znear;
  temp2=right - left;
  temp3=top - bottom;
  temp4=zfar - znear;
  projection.set(temp / temp2,0,(right + left) / temp2,0,0,-temp / temp3,(top + bottom) / temp3,0,0,0,(-zfar - znear) / temp4,(-temp * zfar) / temp4,0,0,-1,1);
  loadProjection();
}
