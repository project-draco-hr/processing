{
  if (t == 0) {
    super.vertexTexture(u,v);
    texturesU[0]=textureU;
    texturesV[0]=textureV;
  }
 else {
    PImage img=textureImages[t];
    if (img == null) {
      throw new RuntimeException("You must first call texture() before " + "using u and v coordinates with vertex()");
    }
    if (textureMode == IMAGE) {
      u/=(float)img.width;
      v/=(float)img.height;
    }
    texturesU[t]=u;
    texturesV[t]=v;
  }
}
