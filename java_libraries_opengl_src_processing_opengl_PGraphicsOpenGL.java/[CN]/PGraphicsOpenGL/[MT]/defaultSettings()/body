{
  super.defaultSettings();
  manipulatingCamera=false;
  clearColorBuffer=false;
  if (fbStack == null) {
    fbStack=new Stack<FrameBuffer>();
    screenFramebuffer=new FrameBuffer(parent,width,height,true);
    setFramebuffer(screenFramebuffer);
  }
  textureMode(IMAGE);
  ambient(80);
  specular(125);
  emissive(0);
  shininess(1);
  setAmbient=false;
}
