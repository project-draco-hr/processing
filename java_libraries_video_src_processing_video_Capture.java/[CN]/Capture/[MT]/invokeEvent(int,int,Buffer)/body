{
  available=true;
  bufWidth=w;
  bufHeight=h;
  if (natBuffer != null) {
    natBuffer.dispose();
  }
  natBuffer=buffer;
  if (captureEventMethod != null) {
    try {
      captureEventMethod.invoke(eventHandler,this);
    }
 catch (    Exception e) {
      System.err.println("error, disabling captureEvent() for capture object");
      e.printStackTrace();
      captureEventMethod=null;
    }
  }
}
