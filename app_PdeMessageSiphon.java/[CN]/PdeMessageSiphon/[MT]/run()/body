{
  String currentLine;
  try {
    while ((currentLine=streamReader.readLine()) != null) {
      consumer.message(currentLine);
    }
    thread=null;
  }
 catch (  NullPointerException npe) {
    thread=null;
  }
catch (  Exception e) {
    if (e.getMessage().indexOf("Bad file descriptor") == -1) {
      System.err.println("PdeMessageSiphon err " + e);
      e.printStackTrace();
      thread=null;
    }
  }
}
