{
  if (pgl != null) {
    if (glFragment != 0) {
      pgl.deleteShader(glFragment);
      glFragment=0;
    }
    if (glVertex != 0) {
      pgl.deleteShader(glVertex);
      glVertex=0;
    }
    if (glProgram != 0) {
      pgl.deleteProgram(glProgram);
      glProgram=0;
    }
    pgl=null;
  }
}
