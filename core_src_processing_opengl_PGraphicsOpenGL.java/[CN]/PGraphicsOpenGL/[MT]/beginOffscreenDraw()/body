{
  if (!initialized) {
    initOffscreen();
  }
 else {
    FrameBuffer ofb=offscreenFramebuffer.get();
    FrameBuffer mfb=multisampleFramebuffer.get();
    boolean outdated=ofb != null && ofb.contextIsOutdated();
    boolean outdatedMulti=mfb != null && mfb.contextIsOutdated();
    if (outdated || outdatedMulti) {
      restartPGL();
      initOffscreen();
    }
 else {
      swapOffscreenTextures();
    }
  }
  pushFramebuffer();
  if (offscreenMultisample) {
    FrameBuffer mfb=multisampleFramebuffer.get();
    if (mfb != null) {
      setFramebuffer(mfb);
    }
  }
 else {
    FrameBuffer ofb=offscreenFramebuffer.get();
    if (ofb != null) {
      setFramebuffer(ofb);
    }
  }
  drawPTexture();
  if (clip) {
    pgl.enable(PGL.SCISSOR_TEST);
    pgl.scissor(clipRect[0],clipRect[1],clipRect[2],clipRect[3]);
  }
 else {
    pgl.disable(PGL.SCISSOR_TEST);
  }
}
