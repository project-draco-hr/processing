{
  flush();
  pgl.depthMask(true);
  pgl.clearDepth(1);
  pgl.clear(PGL.DEPTH_BUFFER_BIT);
  if (hints[DISABLE_DEPTH_MASK]) {
    pgl.depthMask(false);
  }
 else {
    pgl.depthMask(true);
  }
  pgl.clearColor(backgroundR,backgroundG,backgroundB,backgroundA);
  pgl.clear(PGL.COLOR_BUFFER_BIT);
  if (0 < parent.frameCount) {
    clearColorBuffer=true;
  }
  clearCalled=true;
}
