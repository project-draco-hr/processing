{
  boolean needEndDraw=false;
  if (!drawing) {
    beginDraw();
    needEndDraw=true;
  }
  flush();
  Texture tex=getTexture(src);
  pgl.drawTexture(tex.glTarget,tex.glName,tex.glWidth,tex.glHeight,width,height,sx,tex.height - (sy + sh),sx + sw,tex.height - sy,dx,height - (dy + dh),dx + dw,height - dy);
  if (needEndDraw) {
    endDraw();
  }
}
