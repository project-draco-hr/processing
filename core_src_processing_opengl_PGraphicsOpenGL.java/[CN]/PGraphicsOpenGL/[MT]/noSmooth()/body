{
  if (smoothDisabled)   return;
  smooth=false;
  textureSampling=Texture.POINT;
  if (1 < quality) {
    smoothCallCount++;
    if (parent.frameCount - lastSmoothCall < 30 && 5 < smoothCallCount) {
      smoothDisabled=true;
      PGraphics.showWarning(TOO_MANY_SMOOTH_CALLS_ERROR);
    }
    lastSmoothCall=parent.frameCount;
    quality=0;
    restartPGL();
  }
}
