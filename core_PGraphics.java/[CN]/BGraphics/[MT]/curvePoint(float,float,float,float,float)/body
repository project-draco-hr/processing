{
  if (!curve_inited)   curve_init();
  float tt=t * t;
  float ttt=t * tt;
  float m[][]=curve_basis;
  return (a * (ttt * m[0][0] + tt * m[1][0] + t * m[2][0] + m[3][0]) + b * (ttt * m[0][1] + tt * m[1][1] + t * m[2][1] + m[3][1]) + c * (ttt * m[0][2] + tt * m[1][2] + t * m[2][2] + m[3][2]) + d * (ttt * m[0][3] + tt * m[1][3] + t * m[2][3] + m[3][3]));
}
