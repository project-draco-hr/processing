{
  if (textFont != null) {
    if ((textMode == SCREEN) && (size != textFont.size)) {
      throw new RuntimeException("can't use textSize() with " + "textMode(SCREEN)");
    }
    textSize=size;
    textLeading=textSize * ((textFont.ascent() + textFont.descent()) * 1.275f);
  }
 else {
    throw new RuntimeException("use textFont() before textSize()");
  }
}
