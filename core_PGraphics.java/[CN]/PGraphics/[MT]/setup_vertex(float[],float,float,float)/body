{
  spline_vertex_index=0;
  vertex[MX]=x;
  vertex[MY]=y;
  vertex[MZ]=z;
  if (fill) {
    vertex[R]=fillR;
    vertex[G]=fillG;
    vertex[B]=fillB;
    vertex[A]=fillA;
  }
  if (stroke) {
    vertex[SR]=strokeR;
    vertex[SG]=strokeG;
    vertex[SB]=strokeB;
    vertex[SA]=strokeA;
    vertex[SW]=strokeWeight;
  }
  if (textureImage != null) {
    vertex[U]=textureU;
    vertex[V]=textureV;
  }
  if (normalChanged) {
    vertex[NX]=normalX;
    vertex[NY]=normalY;
    vertex[NZ]=normalZ;
  }
}
