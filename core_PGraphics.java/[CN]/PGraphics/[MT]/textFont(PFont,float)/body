{
  if (which == null) {
    System.err.println("Ignoring improperly loaded font in textFont()");
    return;
  }
  text_font=which;
  if (text_space != SCREEN_SPACE) {
    text_font.size(size);
  }
 else {
    System.err.println("Cannot set size of SCREEN_SPACE fonts");
    text_font.size(text_font.iwidth);
  }
  text_font.resetLeading();
}
