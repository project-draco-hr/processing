{
  shape=kind;
  shape_index=shape_index + 1;
  if (shape_index == -1) {
    shape_index=0;
  }
  if (hints[DEPTH_SORT]) {
    vertex_start=vertex_count;
    vertex_end=0;
  }
 else {
    vertex_count=0;
    line.reset();
    lineCount=0;
    pathCount=0;
    triangle.reset();
    triangleCount=0;
  }
  textureImage=null;
  spline_vertex_index=0;
  spline_vertices_flat=true;
  strokeChanged=false;
  fillChanged=false;
  normalChanged=false;
}
