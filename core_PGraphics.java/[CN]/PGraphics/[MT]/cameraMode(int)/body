{
  camera_mode=icameraMode;
  if (camera_mode == PERSPECTIVE) {
    beginCamera();
    resetMatrix();
    perspective(fov,aspect,nearDist,farDist);
    lookat(eyeX,eyeY,eyeDist,eyeX,eyeY,0,0,1,0);
    endCamera();
  }
 else   if (camera_mode == ORTHOGRAPHIC) {
    beginCamera();
    resetMatrix();
    ortho(0,width,0,height,-10,10);
    endCamera();
  }
}
