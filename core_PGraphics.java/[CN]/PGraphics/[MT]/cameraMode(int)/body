{
  if (cameraMode == PERSPECTIVE) {
    beginCamera();
    resetMatrix();
    perspective(cameraFOV,cameraAspect,cameraNearDist,cameraFarDist);
    lookat(cameraEyeX,cameraEyeY,cameraEyeDist,cameraEyeX,cameraEyeY,0,0,1,0);
    endCamera();
  }
 else   if (cameraMode == ORTHOGRAPHIC) {
    beginCamera();
    resetMatrix();
    ortho(0,width,0,height,-10,10);
    endCamera();
  }
  cameraMode=mode;
}
