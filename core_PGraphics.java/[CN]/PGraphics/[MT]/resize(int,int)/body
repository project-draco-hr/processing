{
  width=iwidth;
  height=iheight;
  width1=width - 1;
  height1=height - 1;
  allocate();
  background(backgroundColor);
  fov=60;
  eyeX=width / 2.0f;
  eyeY=height / 2.0f;
  eyeDist=eyeY / ((float)tan(PI * fov / 360f));
  nearDist=eyeDist / 10.0f;
  farDist=eyeDist * 10.0f;
  aspect=(float)width / (float)height;
  cameraMode(PERSPECTIVE);
}
