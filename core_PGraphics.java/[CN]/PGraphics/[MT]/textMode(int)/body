{
  if ((mode == LEFT) || (mode == CENTER) || (mode == RIGHT)) {
    throw new RuntimeException("textMode() is now textAlign() in Processing beta");
  }
  if ((mode != SCREEN) && (mode != MODEL)) {
    throw new RuntimeException("Only textMode(SCREEN) or textMode(MODEL) " + "are available with this renderer.");
  }
  if (textFont != null) {
    textMode=mode;
    if (textMode == SCREEN) {
      textSize(textFont.size);
    }
  }
 else {
    throw new RuntimeException("use textFont() before textMode()");
  }
}
