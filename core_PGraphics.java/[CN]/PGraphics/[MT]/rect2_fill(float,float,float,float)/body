{
  if ((m01 != 0) || (m10 != 0)) {
    quad0_fill(screenX(x1,y1),screenY(x1,y1),screenX(x2,y1),screenY(x2,y1),screenX(x2,y2),screenY(x2,y2),screenX(x1,y2),screenY(x1,y2),fillColor);
  }
 else {
    if ((m00 == 1) && (m11 == 1)) {
      rect0_fill(x1 + m02,y1 + m12,x2 + m02,y2 + m12,0,fillColor);
    }
 else {
      rect0_fill(screenX(x1,y1),screenY(x1,y1),screenX(x2,y2),screenY(x2,y2),0,fillColor);
    }
  }
}
