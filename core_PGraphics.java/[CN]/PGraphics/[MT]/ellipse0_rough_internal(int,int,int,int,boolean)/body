{
  if (filling) {
    for (int i=centerX - ellipseX + 1; i < centerX + ellipseX; i++) {
      point0(i,centerY - ellipseY,0,fillColor);
      point0(i,centerY + ellipseY,0,fillColor);
    }
  }
 else {
    point0(centerX - ellipseX,centerY + ellipseY,0,strokeColor);
    point0(centerX + ellipseX,centerY + ellipseY,0,strokeColor);
    point0(centerX - ellipseX,centerY - ellipseY,0,strokeColor);
    point0(centerX + ellipseX,centerY - ellipseY,0,strokeColor);
  }
}
