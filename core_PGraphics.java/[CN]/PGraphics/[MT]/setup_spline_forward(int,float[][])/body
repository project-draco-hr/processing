{
  float f=1.0f / segments;
  float ff=f * f;
  float fff=ff * f;
  fwd[0][0]=0;
  fwd[0][1]=0;
  fwd[0][2]=0;
  fwd[0][3]=1;
  fwd[1][0]=fff;
  fwd[1][1]=ff;
  fwd[1][2]=f;
  fwd[1][3]=0;
  fwd[2][0]=6 * fff;
  fwd[2][1]=2 * ff;
  fwd[2][2]=0;
  fwd[2][3]=0;
  fwd[3][0]=6 * fff;
  fwd[3][1]=0;
  fwd[3][2]=0;
  fwd[3][3]=0;
}
