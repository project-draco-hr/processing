{
  color_mode=icolorMode;
  colorMaxX=maxX;
  colorMaxY=maxY;
  colorMaxZ=maxZ;
  colorMaxA=maxA;
  color_scale=((maxA != ONE) || (maxX != maxY) || (maxY != maxZ)|| (maxZ != maxA));
  color_rgb255=(color_mode == RGB) && (colorMaxA == 255) && (colorMaxX == 255)&& (colorMaxY == 255)&& (colorMaxZ == 255);
}
