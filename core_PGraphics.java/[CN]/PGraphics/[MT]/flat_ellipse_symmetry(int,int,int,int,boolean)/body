{
  if (filling) {
    for (int i=centerX - ellipseX + 1; i < centerX + ellipseX; i++) {
      thin_point(i,centerY - ellipseY,0,fillColor);
      thin_point(i,centerY + ellipseY,0,fillColor);
    }
  }
 else {
    thin_point(centerX - ellipseX,centerY + ellipseY,0,strokeColor);
    thin_point(centerX + ellipseX,centerY + ellipseY,0,strokeColor);
    thin_point(centerX - ellipseX,centerY - ellipseY,0,strokeColor);
    thin_point(centerX + ellipseX,centerY - ellipseY,0,strokeColor);
  }
}
