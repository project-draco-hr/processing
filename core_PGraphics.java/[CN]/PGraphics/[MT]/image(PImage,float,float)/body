{
  if ((imageMode == CORNER) || (imageMode == CORNERS)) {
    draw_image(image,x,y,x + image.width,y + image.height,0,0,image.width,image.height);
  }
 else   if ((imageMode == CENTER) || (imageMode == CENTER_RADIUS)) {
    draw_image(image,x - image.width / 2.0f,y - image.height / 2.0f,x + image.width / 2.0f,y + image.height / 2.0f,0,0,image.width,image.height);
  }
}
