{
  if (imageMode == CORNER) {
    draw_image(image,a,b,a + c,b + d,u1,v1,u2,v2);
  }
 else   if (imageMode == CORNERS) {
    draw_image(image,a,b,c,d,u1,v1,u2,v2);
  }
 else   if ((imageMode == CENTER) || (imageMode == CENTER_RADIUS)) {
    draw_image(image,a - c / 2f,b - d / 2f,a + c / 2f,b + d / 2f,u1,v1,u2,v2);
  }
}
