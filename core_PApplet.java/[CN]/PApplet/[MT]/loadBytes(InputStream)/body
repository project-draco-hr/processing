{
  try {
    BufferedInputStream bis=new BufferedInputStream(input);
    ByteArrayOutputStream out=new ByteArrayOutputStream();
    int c=bis.read();
    while (c != -1) {
      out.write(c);
      c=bis.read();
    }
    return out.toByteArray();
  }
 catch (  IOException e) {
    e.printStackTrace();
    throw new RuntimeException("Couldn't load bytes from stream");
  }
}
