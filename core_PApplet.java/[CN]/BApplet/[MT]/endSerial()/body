{
  try {
    if (serialInput != null)     serialInput.close();
    if (serialOutput != null)     serialOutput.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  serialInput=null;
  serialOutput=null;
  try {
    if (serialPort != null)     serialPort.close();
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  serialPort=null;
}
