{
  while (thread != null) {
    try {
      int anything=System.in.read();
      if (anything == EXTERNAL_STOP) {
        finished=true;
        thread=null;
      }
    }
 catch (    IOException e) {
      finished=true;
      thread=null;
    }
    try {
      Thread.sleep(250);
    }
 catch (    InterruptedException e) {
    }
  }
}
