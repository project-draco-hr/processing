{
  if (Node instanceof SimpleName) {
    Element lineElement=astGen.getJavaSourceCodeElement(lineNumber);
    OffsetMatcher ofm=new OffsetMatcher(astGen.getPDESourceCodeLine(lineNumber),astGen.getJavaSourceCodeLine(lineNumber));
    int pdeOffset=ofm.getPdeOffForJavaOff(Node.getStartPosition() - lineElement.getStartOffset(),Node.toString().length());
    return pdeOffset;
  }
  return -1;
}
