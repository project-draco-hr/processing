{
  int nodeOffset=node.getStartPosition(), nodeLength=node.getLength();
  ASTNode thisNode=node;
  while (thisNode.getParent() != null) {
    if (getLineNumber(node.getParent()) == lineNumber) {
      node=node.getParent();
    }
 else {
      break;
    }
  }
  return new int[]{lineNumber,node.getStartPosition(),nodeOffset,nodeLength};
}
