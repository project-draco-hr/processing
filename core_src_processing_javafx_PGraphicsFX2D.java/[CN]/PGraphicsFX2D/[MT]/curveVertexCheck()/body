{
  if (shape != POLYGON) {
    throw new RuntimeException("You must use beginShape() or " + "beginShape(POLYGON) before curveVertex()");
  }
  curveInitCheck();
  if (curveCoordX == null) {
    curveCoordX=new float[4];
    curveCoordY=new float[4];
    curveDrawX=new float[4];
    curveDrawY=new float[4];
  }
}
