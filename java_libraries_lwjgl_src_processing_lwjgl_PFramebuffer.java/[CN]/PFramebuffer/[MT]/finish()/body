{
  if (noDepth) {
    if (pg.hintEnabled(DISABLE_DEPTH_TEST)) {
      pgl.glDisable(PGL.GL_DEPTH_TEST);
    }
 else {
      pgl.glEnable(PGL.GL_DEPTH_TEST);
    }
  }
  if (!screenFb && !fboMode) {
    copyToColorBuffers();
    restoreBackup();
    if (!noDepth) {
      pgl.glClearColor(0,0,0,0);
      pgl.glClear(PGL.GL_DEPTH_BUFFER_BIT);
    }
  }
}
