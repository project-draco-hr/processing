{
  if (invisibleCursor == null) {
    try {
      invisibleCursor=new Cursor(1,1,0,0,1,BufferUtils.createIntBuffer(1),null);
    }
 catch (    LWJGLException e1) {
      e1.printStackTrace();
    }
  }
  try {
    Mouse.setNativeCursor(invisibleCursor);
    cursorVisible=false;
  }
 catch (  LWJGLException e) {
    e.printStackTrace();
  }
}
